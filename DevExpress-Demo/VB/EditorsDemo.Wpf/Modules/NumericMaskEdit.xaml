<local:EditorsDemoModule x:Class="EditorsDemo.NumericMaskEdit"
                         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                         xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
                         xmlns:local="clr-namespace:EditorsDemo"
                         xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
                         Height="400"
                         Width="800"
                         HorizontalAlignment="Stretch"
                         VerticalAlignment="Stretch">
    <DockPanel>
        <ScrollViewer HorizontalScrollBarVisibility="Disabled"
                      VerticalScrollBarVisibility="Auto"
                      Name="PART_Options"
                      DockPanel.Dock="Right"
                      dx:ScrollBarExtensions.ScrollBarMode="TouchOverlap"
                      Focusable="False">
            <local:MaskPropertiesEdit Margin="12" x:Name="mask" MinWidth="210" />
        </ScrollViewer>
        <Grid>
            <StackPanel Margin="30,0,30,0" MaxWidth="300" VerticalAlignment="Center">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <TextBlock Text="Currency:" Grid.Column="0" Grid.Row="0" VerticalAlignment="Center" />
                    <TextBlock Text="Negative Alternative:" Grid.Column="0" Grid.Row="1" Margin="0,4,0,0" VerticalAlignment="Center" />
                    <TextBlock Text="Number:" Grid.Column="0" Grid.Row="2" Margin="0,4,0,0" VerticalAlignment="Center" />
                    <TextBlock Text="8 digit:" Grid.Column="0" Grid.Row="3" Margin="0,4,0,0" VerticalAlignment="Center" />
                    <TextBlock Text="Percent:" Grid.Column="0" Grid.Row="4" Margin="0,4,0,0" VerticalAlignment="Center" />
                    <TextBlock Text="Percent2:" Grid.Column="0" Grid.Row="5" Margin="0,4,0,0" VerticalAlignment="Center" />
                    <dxe:TextEdit Grid.Column="1"
                                  Grid.Row="0"
                                  x:Name="editor"
                                  EditValue="399.99"
                                  GotFocus="EditorGotFocus"
                                  MaskType="Numeric"
                                  MaskUseAsDisplayFormat="True"
                                  Mask="c" />
                    <dxe:TextEdit Margin="0,4,0,0"
                                  Grid.Column="1"
                                  Grid.Row="1"
                                  x:Name="negativeAltenative"
                                  EditValue="-399.99"
                                  GotFocus="EditorGotFocus"
                                  MaskUseAsDisplayFormat="True"
                                  MaskType="Numeric"
                                  Mask="#,##0.00;&lt;&lt;#,##0.00&gt;&gt;" />
                    <dxe:TextEdit Margin="0,4,0,0"
                                  Grid.Column="1"
                                  Grid.Row="2"
                                  x:Name="number"
                                  EditValue="399.99"
                                  GotFocus="EditorGotFocus"
                                  MaskUseAsDisplayFormat="True"
                                  MaskType="Numeric"
                                  Mask="n" />
                    <dxe:TextEdit Margin="0,4,0,0"
                                  Grid.Column="1"
                                  Grid.Row="3"
                                  x:Name="eightDigits"
                                  EditValue="399.99"
                                  GotFocus="EditorGotFocus"
                                  MaskUseAsDisplayFormat="True"
                                  MaskType="Numeric"
                                  Mask="d8" />
                    <dxe:TextEdit Margin="0,4,0,0"
                                  Grid.Column="1"
                                  Grid.Row="4"
                                  x:Name="percent"
                                  EditValue="0.3"
                                  GotFocus="EditorGotFocus"
                                  MaskUseAsDisplayFormat="True"
                                  MaskType="Numeric"
                                  Mask="p" />
                    <dxe:TextEdit Margin="0,4,0,0"
                                  Grid.Column="1"
                                  Grid.Row="5"
                                  x:Name="percent2"
                                  EditValue="30"
                                  GotFocus="EditorGotFocus"
                                  MaskUseAsDisplayFormat="True"
                                  MaskType="Numeric"
                                  Mask="P" />
                </Grid>
            </StackPanel>
        </Grid>
    </DockPanel>
</local:EditorsDemoModule>