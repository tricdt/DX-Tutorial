<local:TreeMapDemoModule
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:dxtm="http://schemas.devexpress.com/winfx/2008/xaml/treemap"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:TreeMapDemo"
    x:Class="TreeMapDemo.Hierarchical">
    <!--#region Resources-->
    <local:TreeMapDemoModule.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="/TreeMapDemo;component/Themes/Common.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <local:StringToImagePathConverter
                x:Key="stringToImagePathConverter" />
            <local:EnergyTypeToBrushConverter
                x:Key="energyTypeToBrushConverter" />
            <HierarchicalDataTemplate
                DataType="{x:Type local:CountryEnergyInfo}"
                ItemsSource="{Binding EnergyStatistic}">
                <Border
                    Background="#A6A6A6"
                    Margin="5,5,5,-1">
                    <TextBlock
                        Text="{Binding Country}"
                        FontSize="15"
                        FontWeight="SemiBold"
                        Foreground="White"
                        Margin="8,4,0,4"
                        TextWrapping="WrapWithOverflow"
                        TextTrimming="WordEllipsis" />
                </Border>
            </HierarchicalDataTemplate>
            <DataTemplate
                DataType="{x:Type local:EnergyStatisticItem}">
                <local:LeafVerticalStackPanel
                    Background="{Binding TypeName, Converter={StaticResource ResourceKey=energyTypeToBrushConverter}}"
                    Margin="1">
                    <TextBlock
                        Text="{Binding TypeName}"
                        TextTrimming="CharacterEllipsis"
                        Foreground="White"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Padding="8,4,8,2"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top" />
                    <Image
                        Source="{Binding TypeName, Converter={StaticResource ResourceKey=stringToImagePathConverter}}"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                        Margin="8,2,8,8"
                        Width="32"
                        Height="32" />
                </local:LeafVerticalStackPanel>
            </DataTemplate>
        </ResourceDictionary>
    </local:TreeMapDemoModule.Resources>
    <!--#endregion-->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition
                Height="Auto" />
        </Grid.RowDefinitions>
        <dxtm:TreeMapControl
            x:Name="treeMap"
            EnableHighlighting="False"
            SelectionMode="None"
            Colorizer="{x:Null}"
            ToolTipEnabled="True"
            ToolTipGroupPattern="{}{V}">
            <dxtm:TreeMapControl.Titles>
                <dxtm:Title Content="Energy Consumption in 2004 (millions of tons, oil equivalent)" FontSize="20"/>
            </dxtm:TreeMapControl.Titles>
            <dxtm:TreeMapControl.ToolTipOptions>
                <dxtm:ToolTipOptions
                    OpenMode="OnClick"
                    InitialDelay="0" />
            </dxtm:TreeMapControl.ToolTipOptions>
            <dxtm:TreeMapControl.ToolTipGroupContentTemplate>
                <DataTemplate>
                    <StackPanel
                        Orientation="Horizontal"
                        Margin="16">
                        <TextBlock
                            Text="{Binding Item.Country}"
                            Style="{StaticResource toolTipTextBlockStyle}"
                            FontSize="16"
                            FontWeight="SemiBold" />
                        <TextBlock
                            Text=": "
                            Style="{StaticResource toolTipTextBlockStyle}"
                            FontSize="16"
                            FontWeight="SemiBold" />
                        <TextBlock
                            Text="{Binding ToolTipText}"
                            Style="{StaticResource toolTipTextBlockStyle}"
                            FontSize="16"
                            FontWeight="SemiBold" />
                    </StackPanel>
                </DataTemplate>
            </dxtm:TreeMapControl.ToolTipGroupContentTemplate>
            <dxtm:TreeMapControl.ToolTipContentTemplate>
                <DataTemplate>
                    <StackPanel
                        Orientation="Horizontal"
                        Margin="8">
                        <Border
                            Style="{StaticResource toolTipBorderStyle}"
                            Margin="8"
                            Width="32"
                            Height="32">
                            <Border.OpacityMask>
                                <ImageBrush
                                    ImageSource="{Binding Item.TypeName, Converter={StaticResource ResourceKey=stringToImagePathConverter}}" />
                            </Border.OpacityMask>
                        </Border>
                        <StackPanel
                            Orientation="Vertical"
                            Margin="8">
                            <TextBlock
                                Text="{Binding Item.TypeName}"
                                Style="{StaticResource toolTipTextBlockStyle}"
                                FontSize="14"
                                FontWeight="SemiBold" />
                            <TextBlock
                                Text="{Binding Item.Value}"
                                Style="{StaticResource toolTipTextBlockStyle}"
                                FontSize="12" />
                        </StackPanel>
                    </StackPanel>
                </DataTemplate>
            </dxtm:TreeMapControl.ToolTipContentTemplate>
            <dxtm:TreeMapControl.DataAdapter>
                <dxtm:TreeMapHierarchicalDataAdapter
                    ValueDataMember="Value"
                    DataSource="{Binding}" />
            </dxtm:TreeMapControl.DataAdapter>
        </dxtm:TreeMapControl>
        <Grid
            Grid.Row="1"
            Margin="4">
            <TextBlock
                Text="From www.bea.gov"
                HorizontalAlignment="Right"
                FontSize="12"
                Foreground="Silver" />
        </Grid>
    </Grid>
</local:TreeMapDemoModule>