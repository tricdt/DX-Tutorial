<UserControl x:Class="GanttDemo.Examples.CustomizeSummaryTaskProgress"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:dxgn="http://schemas.devexpress.com/winfx/2008/xaml/gantt"
             xmlns:local="clr-namespace:GanttDemo.Examples">
    <dxgn:GanttControl Name="gantt">
        <dxgn:GanttColumn BindTo="Name" Width="140"/>
        <dxgn:GanttColumn BindTo="Progress" Width="70"/>
        <dxgn:GanttControl.View>
            <dxgn:GanttView
                AutoExpandAllNodes="True"
                NonworkingDayDisplayMode="Cut"
                NonworkingTimeDisplayMode="Cut"
                Zoom="1:40:0"
                TreeListWidth="0" />
        </dxgn:GanttControl.View>
    </dxgn:GanttControl>
</UserControl>