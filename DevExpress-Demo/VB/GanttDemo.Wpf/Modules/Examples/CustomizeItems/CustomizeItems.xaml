<UserControl x:Class="GanttDemo.Examples.CustomizeItems"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dxgn="http://schemas.devexpress.com/winfx/2008/xaml/gantt"
             xmlns:local="clr-namespace:GanttDemo.Examples"
             mc:Ignorable="d" d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <local:ProjectTaskViewModel />
    </UserControl.DataContext>
    <!--#region !-->
    <UserControl.Resources>
        <Style x:Key="connectorStyle" TargetType="{x:Type dxgn:GanttConnector}">
            <Setter Property="ArrowSize" Value="8,5"/>
            <Setter Property="LineMargin" Value="4"/>
            <Setter Property="Stroke" Value="#E63D6D"/>
            <Setter Property="StrokeDashArray" Value="4 4"/>
            <Setter Property="StrokeThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="2"/>
        </Style>
        <Style x:Key="taskStyle" TargetType="{x:Type dxgn:GanttTaskControl}">
            <Setter Property="Background" Value="#E63D6D"/>
            <Setter Property="BorderBrush" Value="#F4C640"/>
            <Setter Property="CornerRadius" Value="3"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="ProgressBackground" Value="#4FBDBD"/>
        </Style>
        <Style x:Key="summaryStyle" TargetType="{x:Type dxgn:GanttSummaryTaskControl}">
            <Setter Property="ProgressBackground" Value="#4FBDBD"/>
            <Setter Property="BracketHeight" Value="4"/>
            <Setter Property="BracketBrush" Value="#04859D"/>
            <Setter Property="Background" Value="#F4C640"/>
        </Style>
        <Style x:Key="milestoneStyle" TargetType="{x:Type dxgn:GanttMilestoneControl}">
            <Setter Property="Background" Value="#0A8E8E"/>
        </Style>
    </UserControl.Resources>
    <!--#endregion-->

    <dxgn:GanttControl ItemsSource="{Binding Tasks}">
        <dxgn:GanttControl.View>
            <!--#region !-->
            <dxgn:GanttView
                AutoExpandAllNodes="True"
                NonworkingDayDisplayMode="Show"
                NonworkingTimeDisplayMode="Show"
                ShowBaseline="True"
                ConnectorStyle="{StaticResource connectorStyle}"
                TaskStyle="{StaticResource taskStyle}"
                SummaryTaskStyle="{StaticResource summaryStyle}"
                MilestoneStyle="{StaticResource milestoneStyle}"
                TreeListWidth="0">
            </dxgn:GanttView>
            <!--#endregion-->
        </dxgn:GanttControl.View>
    </dxgn:GanttControl>
</UserControl>