    <DataTemplate x:Key="Options.BarSplitButtonItem.AppointmentRendering.PopupTemplate">
        <dxb:PopupControlContainer>
            <dxlc:LayoutControl Orientation="Vertical">
                <dxe:CheckEdit
                    Content="Appointments Opacity Animation"
                    Tag="{Binding Path=(dxsch:SchedulerControl.Scheduler), RelativeSource={RelativeSource Mode=Self}}"
                    IsChecked="{DXBinding '@Self.Tag.ActiveView.SchedulerViewBase.IsAppointmentsOpacityAnimationEnabled', Mode=TwoWay}" />
                <dxe:CheckEdit
                    Content="Deferred Appointments Rendering"
                    Tag="{Binding Path=(dxsch:SchedulerControl.Scheduler), RelativeSource={RelativeSource Mode=Self}}"
                    IsChecked="{DXBinding '@Self.Tag.ActiveView.SchedulerViewBase.AppointmentsDeferredRendering', Mode=TwoWay}" />
                <dxlc:LayoutItem Label="Deferred Appointments Rendering Range: " LabelPosition="Top">
                    <dxe:SpinEdit
                        Tag="{Binding Path=(dxsch:SchedulerControl.Scheduler), RelativeSource={RelativeSource Mode=Self}}"
                        Value="{DXBinding '@Self.Tag.ActiveView.SchedulerViewBase.AppointmentsDeferredRenderingRange', Mode=TwoWay}"
                        MinValue="1" MaxValue="100" IsFloatValue="False" />
                </dxlc:LayoutItem>
            </dxlc:LayoutControl>
        </dxb:PopupControlContainer>
    </DataTemplate>
    <DataTemplate x:Key="PrintingOptions.BarSplitButtonItem.ResourcesToPrint.PopupTemplate">
        <dxb:PopupControlContainer Closed="{DXEvent Handler='UpdateReport()'}">
            <dxsch:ResourceTreeControl
                Scheduler="{Binding Path='(dxsch:SchedulerControl.Scheduler)', RelativeSource={RelativeSource Mode=Self}}"
                ItemCheckBoxFieldName="SourceObject.Tag"
                ShowBorder="False"
                MaxHeight="800"/>
        </dxb:PopupControlContainer>
    </DataTemplate>

    <Style x:Key="Options.BarSubItem.WorkDays" x:Shared="False"
           BasedOn="{StaticResource Options.BarItem}"
           TargetType="dxb:BarSubItem">
        <Setter Property="Content" Value="Work Days"/>
        <Setter Property="RibbonStyle" Value="Large"/>
        <Setter Property="Glyph" Value="{dx:ImageSelector Source={dx:DXImage Image=ShowWorkTimeOnly_16x16.png}, SvgSource={dxsch:SchedulerSvgImage Path='Scheduling/ShowWorkTimeOnly.svg'}}"/>
        <Setter Property="LargeGlyph" Value="{dx:ImageSelector Source={dx:DXImage Image=ShowWorkTimeOnly_32x32.png}, SvgSource={dxsch:SchedulerSvgImage Path='Scheduling/ShowWorkTimeOnly.svg'}}"/>
        <Setter Property="ItemTemplate" Value="{StaticResource Options.BarSubItem.ItemTemplateChecked}"/>
        <Setter Property="dxmvvm:Interaction.BehaviorsTemplate">
            <Setter.Value>
                <DataTemplate>
                    <ContentControl>
                        <local:BarSubItem_WorkDaysEditBehavior/>
                    </ContentControl>
                </DataTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="Options.BarEditItem.StartWorkTime" x:Shared="False"
           BasedOn="{StaticResource Options.BarEditItem}"
           TargetType="dxb:BarEditItem">
        <Setter Property="Content" Value="Work Time Start"/>
        <Setter Property="EditHorizontalAlignment" Value="Right"/>
        <Setter Property="EditSettings">
            <Setter.Value>
                <dxe:TextEditSettings MaskType="DateTimeAdvancingCaret" Mask="HH:mm" MaskUseAsDisplayFormat="True" />
            </Setter.Value>
        </Setter>
        <Setter Property="dxmvvm:Interaction.BehaviorsTemplate">
            <Setter.Value>
                <DataTemplate>
                    <ContentControl>
                        <local:BarEditItem_WorkTimeEditBehavior/>
                    </ContentControl>
                </DataTemplate>
            </Setter.Value>
        </Setter>
    </Style>
