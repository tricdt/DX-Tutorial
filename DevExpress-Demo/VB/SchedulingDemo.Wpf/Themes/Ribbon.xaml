    <Style x:Key="Options.RibbonPage" TargetType="dxr:RibbonPage">
        <Setter Property="Caption" Value="Options"/>
        <Setter Property="MergeOrder" Value="1"/>
    </Style>
    <Style x:Key="PrintingOptions.RibbonPage" TargetType="dxr:RibbonPage">
        <Setter Property="Caption" Value="Options"/>
        <Setter Property="MergeOrder" Value="1"/>
    </Style>

    <Style x:Key="Options.BarItem" TargetType="dxb:BarItem" x:Shared="False">
        <Setter Property="Tag" Value="{Binding Path=(dxsch:SchedulerControl.Scheduler), RelativeSource={RelativeSource Mode=Self}}"/>
    </Style>
    <Style x:Key="Options.BarCheckItem" TargetType="dxb:BarCheckItem" x:Shared="False"
           BasedOn="{StaticResource Options.BarItem}">
    </Style>
    <Style x:Key="Options.BarEditItem" TargetType="dxb:BarEditItem" x:Shared="False"
           BasedOn="{StaticResource Options.BarItem}">
        <Setter Property="EditHorizontalAlignment" Value="Left"/>
    </Style>

    <DataTemplate x:Key="Options.BarSubItem.ItemTemplateChecked">
        <dxb:BarCheckItem
            Style="{StaticResource Options.BarCheckItem}"
            Content="{Binding Value}" IsChecked="{Binding IsChecked}"/>
    </DataTemplate>
    <DataTemplate x:Key="Options.BarSplitButtonItem.AppointmentDisplay.PopupTemplate">
        <dxb:PopupControlContainer>
            <dxlc:LayoutControl Orientation="Vertical">
                <dxlc:LayoutGroup Orientation="Horizontal">
                    <dxlc:LayoutGroup Orientation="Vertical" VerticalAlignment="Top">
                        <dxe:CheckEdit
                            Tag="{Binding Path=(dxsch:SchedulerControl.Scheduler), RelativeSource={RelativeSource Mode=Self}}"
                            Content="Show Status"
                            IsChecked="{DXBinding '@s.Tag.ActiveView.SchedulerViewBase.ShowAppointmentStatus', Mode=TwoWay}"/>
                        <dxe:CheckEdit
                            Tag="{Binding Path=(dxsch:SchedulerControl.Scheduler), RelativeSource={RelativeSource Mode=Self}}"
                            Content="Show Location"
                            IsChecked="{DXBinding '@s.Tag.ActiveView.SchedulerViewBase.ShowAppointmentLocation', Mode=TwoWay}"/>
                        <dxe:CheckEdit
                            Tag="{Binding Path=(dxsch:SchedulerControl.Scheduler), RelativeSource={RelativeSource Mode=Self}}"
                            Content="Show Description"
                            IsChecked="{DXBinding '@s.Tag.ActiveView.SchedulerViewBase.ShowAppointmentDescription', Mode=TwoWay}"/>
                        <dxe:CheckEdit
                            Tag="{Binding Path=(dxsch:SchedulerControl.Scheduler), RelativeSource={RelativeSource Mode=Self}}"
                            Content="Show Interval"
                            IsChecked="{DXBinding '@s.Tag.ActiveView.SchedulerViewBase.ShowAppointmentInterval', Mode=TwoWay}"/>
                    </dxlc:LayoutGroup>
                    <dxlc:LayoutGroup Orientation="Vertical" VerticalAlignment="Top">
                        <dxe:CheckEdit
                            Tag="{Binding Path=(dxsch:SchedulerControl.Scheduler), RelativeSource={RelativeSource Mode=Self}}"
                            Content="Show Arrows"
                            IsChecked="{DXBinding '@s.Tag.ActiveView.SchedulerViewBase.ShowAppointmentArrowImages', Mode=TwoWay}"/>
                        <dxe:CheckEdit
                            Tag="{Binding Path=(dxsch:SchedulerControl.Scheduler), RelativeSource={RelativeSource Mode=Self}}"
                            Content="Show Recurrence"
                            IsChecked="{DXBinding '@s.Tag.ActiveView.SchedulerViewBase.ShowAppointmentRecurrenceImage', Mode=TwoWay}"/>
                        <dxe:CheckEdit
                            Tag="{Binding Path=(dxsch:SchedulerControl.Scheduler), RelativeSource={RelativeSource Mode=Self}}"
                            Content="Show Reminder"
                            IsChecked="{DXBinding '@s.Tag.ActiveView.SchedulerViewBase.ShowAppointmentReminderImage', Mode=TwoWay}"/>
                    </dxlc:LayoutGroup>
                </dxlc:LayoutGroup>

                <dxlc:LayoutItem Label="Interval String Format: " LabelPosition="Top">
                    <dxe:TextEdit
                        Tag="{Binding Path=(dxsch:SchedulerControl.Scheduler), RelativeSource={RelativeSource Mode=Self}}"
                        Text="{DXBinding '@s.Tag.ActiveView.SchedulerViewBase.AppointmentIntervalStringFormat', Mode=TwoWay, ValidatesOnExceptions=True}"/>
                </dxlc:LayoutItem>
                <dxlc:LayoutItem Label="Full Interval String Format: " LabelPosition="Top">
                    <dxe:TextEdit
                        Tag="{Binding Path=(dxsch:SchedulerControl.Scheduler), RelativeSource={RelativeSource Mode=Self}}"
                        Text="{DXBinding '@s.Tag.ActiveView.SchedulerViewBase.AppointmentFullIntervalStringFormat', Mode=TwoWay, ValidatesOnExceptions=True}"/>
                </dxlc:LayoutItem>
                <dxlc:LayoutItem Label="Left Arrow Text String Format: " LabelPosition="Top">
                    <dxe:TextEdit
                        Tag="{Binding Path=(dxsch:SchedulerControl.Scheduler), RelativeSource={RelativeSource Mode=Self}}"
                        Text="{DXBinding '@s.Tag.ActiveView.SchedulerViewBase.AppointmentLeftArrowTextStringFormat', Mode=TwoWay, ValidatesOnExceptions=True}"/>
                </dxlc:LayoutItem>
                <dxlc:LayoutItem Label="Right Arrow Text String Format: " LabelPosition="Top">
                    <dxe:TextEdit
                        Tag="{Binding Path=(dxsch:SchedulerControl.Scheduler), RelativeSource={RelativeSource Mode=Self}}"
                        Text="{DXBinding '@s.Tag.ActiveView.SchedulerViewBase.AppointmentRightArrowTextStringFormat', Mode=TwoWay, ValidatesOnExceptions=True}"/>
                </dxlc:LayoutItem>
            </dxlc:LayoutControl>
        </dxb:PopupControlContainer>
    </DataTemplate>
