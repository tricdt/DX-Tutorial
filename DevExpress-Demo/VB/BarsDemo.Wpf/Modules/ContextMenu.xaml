<local:BarsDemoModule x:Class="BarsDemo.ContextMenu"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:local="clr-namespace:BarsDemo"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars"
                      xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
                      xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
                      xmlns:utils="clr-namespace:DemoUtils"
                      x:Name="demoControl">

    <DockPanel LastChildFill="True">
        <dxb:ToolBarControl Caption="Standard" DockPanel.Dock="Top" AllowCustomizationMenu="False" AllowQuickCustomization="False">
            <dxb:BarButtonItem x:Name="bCut"
                               CategoryName="Edit"
                               Content="Cut"
                               Glyph="{dx:DXImage SvgImages/Outlook Inspired/Cut.svg}"
                               KeyGesture="Ctrl+X"
                               Command="{Binding ElementName=edit, Path=CutCommand}" />
            <dxb:BarButtonItem x:Name="bCopy"
                               CategoryName="Edit"
                               Content="Copy"
                               Glyph="{dx:DXImage SvgImages/Outlook Inspired/Copy.svg}"
                               KeyGesture="Ctrl+C"
                               Command="{Binding ElementName=edit, Path=CopyCommand}" />
            <dxb:BarButtonItem x:Name="bPaste"
                               CategoryName="Edit"
                               Content="Paste"
                               Glyph="{dx:DXImage SvgImages/Outlook Inspired/Paste.svg}"
                               KeyGesture="Ctrl+V"
                               Command="{Binding ElementName=edit, Path=PasteCommand}" />
            <dxb:BarItemLinkSeparator />
            <dxb:BarButtonItem x:Name="bUndo"
                               CategoryName="Edit"
                               Content="Undo"
                               Glyph="{dx:DXImage SvgImages/Outlook Inspired/Undo.svg}"
                               Command="{x:Static ApplicationCommands.Undo}" />
            <dxb:BarButtonItem x:Name="bRedo"
                               CategoryName="Edit"
                               Content="Redo"
                               Glyph="{dx:DXImage SvgImages/Outlook Inspired/Redo.svg}"
                               Command="{x:Static ApplicationCommands.Redo}" />
            <dxb:BarItemLinkSeparator />
            <dxb:BarButtonItem x:Name="bSelectAll"
                               CategoryName="Edit"
                               Content="Select All"
                               KeyGesture="Ctrl+A"
                               Glyph="{dx:DXImage SvgImages/PDF Viewer/SelectAll.svg}"
                               Command="{Binding ElementName=edit, Path=SelectAllCommand}"
                               BarItemDisplayMode="ContentAndGlyph" />
            <dxb:BarButtonItem x:Name="bClear"
                               CategoryName="Edit"
                               Content="Clear"
                               Glyph="{dx:DXImage SvgImages/Icon Builder/Actions_Clear.svg}"
                               Command="{Binding ElementName=edit, Path=ClearCommand}"
                               BarItemDisplayMode="ContentAndGlyph" />
        </dxb:ToolBarControl>
        <ScrollViewer HorizontalScrollBarVisibility="Disabled"
                      VerticalScrollBarVisibility="Auto"
                      Name="PART_Options"
                      DockPanel.Dock="Right"
                      dx:ScrollBarExtensions.ScrollBarMode="TouchOverlap"
                      Focusable="False">
            <StackPanel Margin="12,5,12,12" MinWidth="210">
                <GroupBox Header="Invoke the menu using...">
                    <StackPanel>
                        <RadioButton x:Name="Right" IsChecked="True" Click="OnRadioButtonClick" Margin="0,0,0,8" Content="Right mouse button" />
                        <RadioButton x:Name="Left" Click="OnRadioButtonClick" Margin="0,0,0,8" Content="Left mouse button" />
                        <RadioButton x:Name="LeftRight" Click="OnRadioButtonClick" Margin="0,0,0,8" Content="Left and Right mouse buttons" />
                    </StackPanel>
                </GroupBox>
                <GroupBox Header="Clipboard options">
                    <StackPanel>
                        <TextBlock Text="Menu item orientation" VerticalAlignment="Center" Margin="0,0,6,0" />
                        <dxe:ComboBoxEdit x:Name="OrientationComboBox" Margin="0,0,0,8"
                                          EditValue="{Binding ElementName=header, Path=ItemsOrientation, Mode=TwoWay}"
                                          ItemsSource="{dxe:EnumItemsSource EnumType={x:Type dx:HeaderOrientation}}" />
                        <CheckBox x:Name="ShowContentHeaderCheckBox" Content="Display the menu caption" IsChecked="{Binding ElementName=header, Path=ShowContentHeader}" Margin="0,0,0,8" />
                        <TextBlock Text="Caption" VerticalAlignment="Center" Margin="0,0,6,0" />
                        <TextBox x:Name="HeaderContentTextBox" Text="{Binding ElementName=header, Path=Content}" Margin="0,0,0,8" />
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>
        <utils:DemoRichControl x:Name="edit"
                               dxb:BarManager.MenuShowMouseButton="{Binding Path=MenuButton, ElementName=demoControl}"
                               BorderThickness="0">
            <dxb:BarManager.DXContextMenu>
                <dxb:PopupMenu>
                    <dxb:BarItemMenuHeader Name="header" Content="Clipboard options" ItemsOrientation="Horizontal" ShowContentHeader="False">
                        <dxb:BarButtonItemLink BarItemName="bCut" />
                        <dxb:BarButtonItemLink BarItemName="bCopy" />
                        <dxb:BarButtonItemLink BarItemName="bPaste" />
                    </dxb:BarItemMenuHeader>
                    <dxb:BarItemLinkSeparator />
                    <dxb:BarButtonItemLink BarItemName="bUndo" />
                    <dxb:BarButtonItemLink BarItemName="bRedo" />
                    <dxb:BarItemLinkSeparator />
                    <dxb:BarButtonItemLink BarItemName="bSelectAll" />
                    <dxb:BarButtonItemLink BarItemName="bClear" />
                </dxb:PopupMenu>
            </dxb:BarManager.DXContextMenu>
        </utils:DemoRichControl>
    </DockPanel>
</local:BarsDemoModule>