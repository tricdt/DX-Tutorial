<local:TabItemModule
    x:Class="ChartsDemo.Point3DTab"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ChartsDemo"
    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
    xmlns:dxc="http://schemas.devexpress.com/winfx/2008/xaml/charts"
    mc:Ignorable="d"
    d:DesignHeight="450"
    d:DesignWidth="800">
    <!--#region Resources-->
    <local:TabItemModule.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="/ChartsDemo;component/Themes/Common.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <Style
                TargetType="dxc:PointSeries3D"
                x:Key="seriesStyle">
                <Setter
                    Property="ArgumentDataMember"
                    Value="Region" />
                <Setter
                    Property="ValueDataMember"
                    Value="Sales" />
                <Setter
                    Property="ToolTipPointPattern"
                    Value="{}{A}: ${V}M" />
                <Setter
                    Property="Model"
                    Value="{Binding ElementName=lbeModel, Path=EditValue}" />
                <Setter
                    Property="LabelsVisibility"
                    Value="{Binding ElementName=cheShowLabels, Path=IsChecked}" />
                <Setter
                    Property="MarkerSize"
                    Value="{Binding ElementName=tbeMarkerSize, Path=EditValue}" />
                <Setter
                    Property="Label">
                    <Setter.Value>
                        <dxc:SeriesLabel
                            RenderMode="CustomShape"
                            TextPattern="{}${V}M"
                            dxc:MarkerSeries3D.LabelPosition="{Binding ElementName=lbePosition, Path=EditValue}" />
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </local:TabItemModule.Resources>
    <!--#endregion-->

    <!--#region Options-->
    <local:TabItemModule.Options>
        <StackPanel
            Style="{StaticResource optionsRootStackPanelStyle}">
            <dxe:CheckEdit
                Name="cheShowLabels"
                Content="Show Labels"
                IsChecked="False" />
            <GroupBox
                Header="Position"
                Margin="0,5,0,0">
                <dxe:ListBoxEdit
                    Name="lbePosition"
                    SelectedIndex="0"
                    ItemsSource="{dxe:EnumItemsSource EnumType=dxc:Marker3DLabelPosition}"
                    IsEnabled="{Binding RelativeSource={RelativeSource AncestorType={x:Type StackPanel}}, Path=Children[0].IsChecked}">
                    <dxe:ListBoxEdit.StyleSettings>
                        <dxe:RadioListBoxEditStyleSettings />
                    </dxe:ListBoxEdit.StyleSettings>
                </dxe:ListBoxEdit>
            </GroupBox>
            <GroupBox
                Header="Marker Size"
                Margin="0,5,0,0">
                <StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Label
                            Grid.Column="0"
                            Content="0.1"
                            HorizontalAlignment="Left" />
                        <Label
                            Grid.Column="1"
                            Content="0.55"
                            HorizontalAlignment="Center" />
                        <Label
                            Grid.Column="2"
                            Content="1"
                            HorizontalAlignment="Right" />
                    </Grid>
                    <dxe:TrackBarEdit
                        Name="tbeMarkerSize"
                        Minimum="0.1"
                        Maximum="1"
                        TickPlacement="None"
                        SmallStep="0.01"
                        LargeStep="0.1"
                        Value="0.5" />
                </StackPanel>
            </GroupBox>
            <GroupBox
                Header="Model"
                Margin="0,5,0,0">
                <dxe:ListBoxEdit
                    Name="lbeModel"
                    DisplayMember="ModelName"
                    SelectedItem="{x:Reference sphereModel}">
                    <dxe:ListBoxEdit.StyleSettings>
                        <dxe:RadioListBoxEditStyleSettings />
                    </dxe:ListBoxEdit.StyleSettings>
                    <dxe:ListBoxEdit.Items>
                        <dxc:CapsuleMarker3DModel />
                        <dxc:ConeMarker3DModel />
                        <dxc:CubeMarker3DModel />
                        <dxc:CylinderMarker3DModel />
                        <dxc:HexagonMarker3DModel />
                        <dxc:PyramidMarker3DModel />
                        <dxc:RoundedCubeMarker3DModel />
                        <dxc:SphereMarker3DModel
                            x:Name="sphereModel" />
                        <dxc:StarMarker3DModel />
                    </dxe:ListBoxEdit.Items>
                </dxe:ListBoxEdit>
            </GroupBox>
        </StackPanel>
    </local:TabItemModule.Options>
    <!--#endregion-->

    <DockPanel>
        <!--#region Animation trigger-->
        <DockPanel.Triggers>
            <EventTrigger
                RoutedEvent="DockPanel.Loaded">
                <EventTrigger.Actions>
                    <BeginStoryboard>
                        <Storyboard Completed="Storyboard_Completed">
                            <DoubleAnimation
                                Storyboard.TargetName="seriesAnimationRecord"
                                Storyboard.TargetProperty="Progress"
                                From="0"
                                To="1"
                                Duration="0:0:2" />
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger.Actions>
            </EventTrigger>
        </DockPanel.Triggers>
        <!--#endregion-->

        <!--#region ChartsRibbon-->
        <local:ChartsDemoRibbon
            DockPanel.Dock="Top"
            Chart="{x:Reference chart}" />
        <!--#endregion-->

        <dxc:ChartControl
            Name="chart"
            IsManipulationEnabled="True">
            <dxc:ChartControl.DataContext>
                <local:DevAVSalesByYear />
            </dxc:ChartControl.DataContext>
            <!--#region AnimationRecords-->
            <dxc:ChartControl.AnimationRecords>
                <dxc:ChartAnimationRecord
                    x:Name="seriesAnimationRecord"
                    Progress="0">
                    <dxc:ChartAnimationRecord.Animations>
                        <dxc:SeriesAnimation
                            TargetSeries="{Binding ElementName=series1}">
                            <dxc:SeriesAnimation.Actions>
                                <dxc:SeriesSeriesPointsAction
                                    EqualSpeed="False"
                                    Sequential="True"
                                    DelayPercentage="30" />
                            </dxc:SeriesAnimation.Actions>
                        </dxc:SeriesAnimation>
                        <dxc:SeriesAnimation
                            TargetSeries="{Binding ElementName=series2}">
                            <dxc:SeriesAnimation.Actions>
                                <dxc:SeriesSeriesPointsAction
                                    EqualSpeed="False"
                                    Sequential="True"
                                    DelayPercentage="20" />
                            </dxc:SeriesAnimation.Actions>
                        </dxc:SeriesAnimation>
                        <dxc:SeriesAnimation
                            TargetSeries="{Binding ElementName=series3}">
                            <dxc:SeriesAnimation.Actions>
                                <dxc:SeriesSeriesPointsAction
                                    EqualSpeed="False"
                                    Sequential="True"
                                    DelayPercentage="10" />
                            </dxc:SeriesAnimation.Actions>
                        </dxc:SeriesAnimation>
                    </dxc:ChartAnimationRecord.Animations>
                </dxc:ChartAnimationRecord>
            </dxc:ChartControl.AnimationRecords>
            <!--#endregion-->
            <dxc:ChartControl.Diagram>
                <dxc:XYDiagram3D
                    SeriesPadding="0.5"
                    SeriesDistance="1"
                    ZoomPercent="130"
                    VerticalScrollPercent="10">
                    <!--#region AxisY-->
                    <dxc:XYDiagram3D.AxisY>
                        <dxc:AxisY3D>
                            <dxc:AxisY3D.Title>
                                <dxc:AxisTitle
                                    Content="Millions of Dollars" />
                            </dxc:AxisY3D.Title>
                        </dxc:AxisY3D>
                    </dxc:XYDiagram3D.AxisY>
                    <!--#endregion-->
                    <dxc:XYDiagram3D.Series>
                        <dxc:PointSeries3D
                            x:Name="series1"
                            DisplayName="{Binding Series1DisplayName}"
                            DataSource="{Binding Series1Source}"
                            Style="{StaticResource seriesStyle}" />
                        <dxc:PointSeries3D
                            x:Name="series2"
                            DisplayName="{Binding Series2DisplayName}"
                            DataSource="{Binding Series2Source}"
                            Style="{StaticResource seriesStyle}" />
                        <dxc:PointSeries3D
                            x:Name="series3"
                            DisplayName="{Binding Series3DisplayName}"
                            DataSource="{Binding Series3Source}"
                            Style="{StaticResource seriesStyle}" />
                    </dxc:XYDiagram3D.Series>
                </dxc:XYDiagram3D>
            </dxc:ChartControl.Diagram>
            <!--#region Legend-->
            <dxc:ChartControl.Legend>
                <dxc:Legend
                    HorizontalPosition="Right" />
            </dxc:ChartControl.Legend>
            <!--#endregion-->
            <!--#region Titles-->
            <dxc:ChartControl.Titles>
                <dxc:Title
                    Dock="Top"
                    HorizontalAlignment="Center"
                    FontSize="24">DevAV Sales by Year</dxc:Title>
            </dxc:ChartControl.Titles>
            <!--#endregion-->
        </dxc:ChartControl>

    </DockPanel>
</local:TabItemModule>