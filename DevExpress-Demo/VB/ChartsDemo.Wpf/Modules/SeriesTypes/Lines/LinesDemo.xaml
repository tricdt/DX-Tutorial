<local:ChartsDemoModule
    x:Class="ChartsDemo.LinesDemo"
    x:Name="demoModule"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ChartsDemo"
    xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    mc:Ignorable="d"
    d:DesignHeight="450"
    d:DesignWidth="800"
    DataContext="{dxmvvm:ViewModelSource Type=local:TabbedModuleViewModel}">
    <!--#region Resources-->
    <local:ChartsDemoModule.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="/ChartsDemo;component/Themes/Common.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <local:OptionsConverter
                x:Key="optionsConverter" />
        </ResourceDictionary>
    </local:ChartsDemoModule.Resources>
    <!--#endregion-->

    <DockPanel>
        <!--#region Options-->
        <ScrollViewer
            Name="PART_Options"
            Style="{StaticResource optionsScrollViewerStyle}"
            Content="{Binding SelectedTab, Converter={StaticResource optionsConverter}}">
        </ScrollViewer>
        <!--#endregion-->

        <dx:DXTabControl
            SelectedTabItem="{Binding SelectedTab, Mode=TwoWay}"
            Style="{StaticResource moduleTabControlStyle}">
            <dx:DXTabControl.View>
                <dx:TabControlScrollView
                    ShowHeaderMenu="True" />
            </dx:DXTabControl.View>
            <dx:DXTabItem
                Header="Line"
                Glyph="{dx:SvgImageSource Uri='../../../Images/SeriesViews/ChartTypes_Line.svg', Size='16,16'}">
                <local:LineTab
                    IsModuleLoaded="{Binding ElementName=demoModule, Path=IsModuleLoaded}" />
            </dx:DXTabItem>
            <dx:DXTabItem
                Header="Scatter Line"
                Glyph="{dx:SvgImageSource Uri='../../../Images/SeriesViews/ChartTypes_ScatterLine.svg', Size='16,16'}">
                <local:ScatterLineTab />
            </dx:DXTabItem>
            <dx:DXTabItem
                Header="Step Line"
                Glyph="{dx:SvgImageSource Uri='../../../Images/SeriesViews/ChartTypes_StepLine.svg', Size='16,16'}">
                <local:StepLineTab />
            </dx:DXTabItem>
            <dx:DXTabItem
                Header="Spline"
                Glyph="{dx:SvgImageSource Uri='../../../Images/SeriesViews/ChartTypes_Spline.svg', Size='16,16'}">
                <local:SplineTab />
            </dx:DXTabItem>
            <dx:DXTabItem
                Header="Stacked Line"
                Glyph="{dx:SvgImageSource Uri='../../../Images/SeriesViews/ChartTypes_LineStacked.svg', Size='16,16'}">
                <local:StackedLineTab />
            </dx:DXTabItem>
            <dx:DXTabItem
                Header="Full-Stacked Line"
                Glyph="{dx:SvgImageSource Uri='../../../Images/SeriesViews/ChartTypes_LineStacked100%.svg', Size='16,16'}">
                <local:FullStackedLineTab />
            </dx:DXTabItem>
        </dx:DXTabControl>

    </DockPanel>
</local:ChartsDemoModule>