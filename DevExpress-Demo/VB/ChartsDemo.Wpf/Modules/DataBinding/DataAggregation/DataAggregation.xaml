<local:ChartsDemoModule
    x:Class="ChartsDemo.DataAggregationDemo"
    x:Name="demoModule"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ChartsDemo"
    xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    mc:Ignorable="d"
    d:DesignHeight="450"
    d:DesignWidth="800"
    DataContext="{dxmvvm:ViewModelSource Type=local:NotCachedTabbedModuleViewModel}">
    <!--#region Resources-->
    <local:ChartsDemoModule.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="/ChartsDemo;component/Themes/Common.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <local:OptionsConverter
                x:Key="optionsConverter" />
        </ResourceDictionary>
    </local:ChartsDemoModule.Resources>
    <!--#endregion-->

    <DockPanel>
        <!--#region Options-->
        <ScrollViewer
            Name="PART_Options"
            Style="{StaticResource optionsScrollViewerStyle}">
            <ContentControl
                Content="{Binding Options}" />
        </ScrollViewer>
        <!--#endregion-->

        <Grid>
            <dx:DXTabControl
                SelectedTabItem="{Binding SelectedTab, Mode=TwoWay}"
                Style="{StaticResource ResourceKey=moduleTabControlStyle}"
                TabContentCacheMode="None">
                <dx:DXTabControl.View>
                    <dx:TabControlScrollView
                        ShowHeaderMenu="True" />
                </dx:DXTabControl.View>
                <dx:DXTabItem
                    Header="Numeric">
                    <dx:DXTabItem.ContentTemplate>
                        <DataTemplate>
                            <dx:LoadingDecorator>
                                <dx:LoadingDecorator.LoadingChildTemplate>
                                    <DataTemplate>
                                        <local:NumericDataAggregationTab
                                            Loaded="OnTabItemLoaded" />
                                    </DataTemplate>
                                </dx:LoadingDecorator.LoadingChildTemplate>
                            </dx:LoadingDecorator>
                        </DataTemplate>
                    </dx:DXTabItem.ContentTemplate>
                </dx:DXTabItem>
                <dx:DXTabItem
                    Header="Date-Time">
                    <dx:DXTabItem.ContentTemplate>
                        <DataTemplate>
                            <dx:LoadingDecorator>
                                <dx:LoadingDecorator.LoadingChildTemplate>
                                    <DataTemplate>
                                        <local:DateTimeDataAggregationTab
                                            Loaded="OnTabItemLoaded" />
                                    </DataTemplate>
                                </dx:LoadingDecorator.LoadingChildTemplate>
                            </dx:LoadingDecorator>
                        </DataTemplate>
                    </dx:DXTabItem.ContentTemplate>
                </dx:DXTabItem>
                <dx:DXTabItem
                    Header="Qualitative">
                    <dx:DXTabItem.ContentTemplate>
                        <DataTemplate>
                            <dx:LoadingDecorator>
                                <dx:LoadingDecorator.LoadingChildTemplate>
                                    <DataTemplate>
                                        <local:QualitativeDataAggregationTab
                                            Loaded="OnTabItemLoaded" />
                                    </DataTemplate>
                                </dx:LoadingDecorator.LoadingChildTemplate>
                            </dx:LoadingDecorator>
                        </DataTemplate>
                    </dx:DXTabItem.ContentTemplate>
                </dx:DXTabItem>
                <dx:DXTabItem
                    Header="Time-Span">
                    <dx:DXTabItem.ContentTemplate>
                        <DataTemplate>
                            <dx:LoadingDecorator>
                                <dx:LoadingDecorator.LoadingChildTemplate>
                                    <DataTemplate>
                                        <local:TimeSpanDataAggregationTab
                                            Loaded="OnTabItemLoaded" />
                                    </DataTemplate>
                                </dx:LoadingDecorator.LoadingChildTemplate>
                            </dx:LoadingDecorator>
                        </DataTemplate>
                    </dx:DXTabItem.ContentTemplate>
                </dx:DXTabItem>
            </dx:DXTabControl>
        </Grid>
    </DockPanel>
</local:ChartsDemoModule>