<local:ChartsDemoModule
    x:Class="ChartsDemo.MvvmStyleBindingDemo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dxc="http://schemas.devexpress.com/winfx/2008/xaml/charts"
    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
    xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
    xmlns:local="clr-namespace:ChartsDemo"
    DataContext="{dxmvvm:ViewModelSource Type={x:Type local:DailyWeatherViewModel}}">
    <dxmvvm:Interaction.Triggers>
        <dxmvvm:EventToCommand
            EventName="ModuleLoaded"
            Command="{Binding OnModuleLoadedCommand}" />
    </dxmvvm:Interaction.Triggers>
    <!--#region Resources-->
    <local:ChartsDemoModule.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="/ChartsDemo;component/Themes/Common.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <dxmvvm:ColorToBrushConverter
                x:Key="colorBrushConverter" />
            <Style
                TargetType="{x:Type dxc:XYSeries2D}"
                x:Key="seriesStyle">
                <Setter
                    Property="AnimationAutoStartMode"
                    Value="SetStartState" />
                <Setter
                    Property="ArgumentDataMember"
                    Value="Date" />
                <Setter
                    Property="Brush"
                    Value="{Binding Color, Converter={StaticResource colorBrushConverter}}" />
                <Setter
                    Property="DataSource"
                    Value="{Binding Data}" />
                <Setter
                    Property="DisplayName"
                    Value="{Binding Name}" />
            </Style>
        </ResourceDictionary>
    </local:ChartsDemoModule.Resources>
    <!--#endregion-->

    <DockPanel>
        <!--#region Options-->
        <ScrollViewer
            Name="PART_Options"
            Style="{StaticResource optionsScrollViewerStyle}">
            <StackPanel
                Style="{StaticResource optionsRootStackPanelStyle}">
                <GroupBox
                    Header="Average Line Thickness"
                    VerticalAlignment="Top">
                    <ItemsControl
                        ItemsSource="{Binding Weather}">
                        <ItemsControl.ItemTemplateSelector>
                            <local:WeatherTemplateSelector>
                                <local:WeatherTemplateSelector.AverageTemplate>
                                    <DataTemplate>
                                        <StackPanel
                                            Margin="0,10,0,0">
                                            <TextBlock
                                                Text="{Binding Name}"
                                                HorizontalAlignment="Right"
                                                FontWeight="Bold">
                                                <TextBlock.Foreground>
                                                    <SolidColorBrush
                                                        Color="{Binding Color}" />
                                                </TextBlock.Foreground>
                                            </TextBlock>
                                            <dxe:TrackBarEdit
                                                Value="{Binding AverageLineThickness, Mode=TwoWay}"
                                                Minimum="1"
                                                Maximum="5"
                                                SmallStep="1"
                                                LargeStep="1"
                                                TickPlacement="None" />
                                            <Grid>
                                                <TextBlock
                                                    Text="1"
                                                    HorizontalAlignment="Left" />
                                                <TextBlock
                                                    Text="5"
                                                    HorizontalAlignment="Right" />
                                            </Grid>
                                        </StackPanel>
                                    </DataTemplate>
                                </local:WeatherTemplateSelector.AverageTemplate>
                                <local:WeatherTemplateSelector.MinMaxTemplate>
                                    <DataTemplate>
                                        <Border
                                            Width="0"
                                            Height="0" />
                                    </DataTemplate>
                                </local:WeatherTemplateSelector.MinMaxTemplate>
                            </local:WeatherTemplateSelector>
                        </ItemsControl.ItemTemplateSelector>
                    </ItemsControl>

                </GroupBox>
            </StackPanel>
        </ScrollViewer>
        <!--#endregion-->

        <dxc:ChartControl
            AnimationMode="OnLoad"
            Name="chart">
            <dxmvvm:Interaction.Behaviors>
                <local:ChartAnimationService />
            </dxmvvm:Interaction.Behaviors>
            <dxc:XYDiagram2D
                SeriesItemsSource="{Binding Weather}"
                EnableAxisXNavigation="True">
                <!--#region Axes-->
                <dxc:XYDiagram2D.NavigationOptions>
                    <dxc:NavigationOptions
                        AxisXMaxZoomPercent="300" />
                </dxc:XYDiagram2D.NavigationOptions>
                <dxc:XYDiagram2D.AxisX>
                    <dxc:AxisX2D
                        Interlaced="False"
                        GridLinesVisible="True"
                        GridLinesMinorVisible="True">
                        <dxc:AxisX2D.WholeRange>
                            <dxc:Range
                                SideMarginsValue="0" />
                        </dxc:AxisX2D.WholeRange>
                    </dxc:AxisX2D>
                </dxc:XYDiagram2D.AxisX>
                <dxc:XYDiagram2D.AxisY>
                    <dxc:AxisY2D
                        Interlaced="False"
                        GridLinesVisible="True"
                        GridLinesMinorVisible="True">
                        <dxc:AxisY2D.Title>
                            <dxc:AxisTitle
                                Content="Daily Temperature, °C" />
                        </dxc:AxisY2D.Title>
                        <dxc:AxisY2D.WholeRange>
                            <dxc:Range
                                SideMarginsValue="3" />
                        </dxc:AxisY2D.WholeRange>
                    </dxc:AxisY2D>
                </dxc:XYDiagram2D.AxisY>
                <!--#endregion-->
                <dxc:XYDiagram2D.SeriesItemTemplateSelector>
                    <local:WeatherTemplateSelector>
                        <local:WeatherTemplateSelector.MinMaxTemplate>
                            <DataTemplate>
                                <dxc:RangeAreaSeries2D
                                    Style="{StaticResource seriesStyle}"
                                    Marker1Visible="False"
                                    Marker2Visible="False"
                                    Transparency="0.7"
                                    ValueDataMember="MinValue"
                                    Value2DataMember="MaxValue"
                                    CrosshairLabelPattern="{}{S} Day Temperature:&#xA;Min: {V1}°C&#xA;Max: {V2}°C">
                                    <!--#region Animations-->
                                    <dxc:RangeAreaSeries2D.SeriesAnimation>
                                        <dxc:Area2DStretchFromNearAnimation
                                            Duration="0:0:1.200" />
                                    </dxc:RangeAreaSeries2D.SeriesAnimation>
                                    <dxc:RangeAreaSeries2D.PointAnimation>
                                        <dxc:Marker2DFadeInAnimation
                                            Duration="0:0:0"
                                            PointDelay="0:0:0" />
                                    </dxc:RangeAreaSeries2D.PointAnimation>
                                    <!--#endregion-->
                                </dxc:RangeAreaSeries2D>
                            </DataTemplate>
                        </local:WeatherTemplateSelector.MinMaxTemplate>
                        <local:WeatherTemplateSelector.AverageTemplate>
                            <DataTemplate>
                                <dxc:SplineSeries2D
                                    Style="{StaticResource seriesStyle}"
                                    ValueDataMember="AvgValue"
                                    ShowInLegend="False"
                                    CrosshairLabelPattern="{}{S} Avg: {V}°C">
                                    <dxc:SplineSeries2D.LineStyle>
                                        <dxc:LineStyle
                                            Thickness="{Binding AverageLineThickness}" />
                                    </dxc:SplineSeries2D.LineStyle>
                                    <!--#region Animations-->
                                    <dxc:SplineSeries2D.SeriesAnimation>
                                        <dxc:Line2DUnwindAnimation
                                            BeginTime="0:0:0.600"
                                            Duration="0:0:1" />
                                    </dxc:SplineSeries2D.SeriesAnimation>
                                    <dxc:SplineSeries2D.PointAnimation>
                                        <dxc:Marker2DFadeInAnimation
                                            Duration="0:0:0"
                                            PointDelay="0:0:0" />
                                    </dxc:SplineSeries2D.PointAnimation>
                                    <!--#endregion-->
                                </dxc:SplineSeries2D>
                            </DataTemplate>
                        </local:WeatherTemplateSelector.AverageTemplate>
                    </local:WeatherTemplateSelector>
                </dxc:XYDiagram2D.SeriesItemTemplateSelector>
            </dxc:XYDiagram2D>
            <!--#region Titles-->
            <dxc:ChartControl.Titles>
                <dxc:Title
                    Content="Extreme Temperature Conditions"
                    HorizontalAlignment="Center" />
            </dxc:ChartControl.Titles>
            <!--#endregion-->
            <!--#region Legends-->
            <dxc:ChartControl.Legends>
                <dxc:Legend
                    VerticalPosition="Top"
                    HorizontalPosition="Right" />
            </dxc:ChartControl.Legends>
            <!--#endregion-->
            <!--#region CrosshairOptions-->
            <dxc:ChartControl.CrosshairOptions>
                <dxc:CrosshairOptions
                    GroupHeaderPattern="{}{A:d}" />
            </dxc:ChartControl.CrosshairOptions>
            <!--#endregion-->
        </dxc:ChartControl>
    </DockPanel>
</local:ChartsDemoModule>