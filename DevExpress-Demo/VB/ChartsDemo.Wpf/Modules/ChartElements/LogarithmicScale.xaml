<local:ChartsDemoModule
    x:Class="ChartsDemo.LogarithmicScaleDemo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:dxc="http://schemas.devexpress.com/winfx/2008/xaml/charts"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:ChartsDemo"
    xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
    mc:Ignorable="d"
    d:DesignHeight="450"
    d:DesignWidth="800"
    DataContext="{dxmvvm:ViewModelSource Type=local:LogarithmicScaleViewModel}">
    <!--#region Resources-->
    <local:ChartsDemoModule.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="/ChartsDemo;component/Themes/Common.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <Style
                TargetType="dxc:LineSeries2D"
                x:Key="sereisStyle">
                <Setter
                    Property="ArgumentDataMember"
                    Value="Frequency" />
                <Setter
                    Property="LineStyle">
                    <Setter.Value>
                        <dxc:LineStyle
                            Thickness="3" />
                    </Setter.Value>
                </Setter>
                <Setter
                    Property="CrosshairLabelPattern"
                    Value="{}{S}: {V:0.##}%" />
                <Setter
                    Property="AnimationAutoStartMode"
                    Value="SetStartState" />
            </Style>
        </ResourceDictionary>
    </local:ChartsDemoModule.Resources>
    <!--#endregion-->

    <DockPanel>
        <!--#region ChartsDemoRibbon-->
        <local:ChartsDemoRibbon
            DockPanel.Dock="Top"
            Chart="{x:Reference chart}" />
        <!--#endregion-->

        <dxc:ChartControl
            x:Name="chart"
            DataSource="{DXBinding '$local:HeadphoneComparisonDataReader.ReadDataFromFile()'}"
            Palette="{Binding Palette, Mode=OneWayToSource}"
            AnimationMode="OnLoad">
            <!--#region CrosshairOptions-->
            <dxc:ChartControl.CrosshairOptions>
                <dxc:CrosshairOptions
                    GroupHeaderPattern="{}{A:0.####} Hz" />
            </dxc:ChartControl.CrosshairOptions>
            <!--#endregion-->
            <!--#region Titles-->
            <dxc:ChartControl.Titles>
                <dxc:Title
                    Content="Headphones comparison"
                    HorizontalAlignment="Center" />
            </dxc:ChartControl.Titles>
            <!--#endregion-->
            <!--#region Legend-->
            <dxc:ChartControl.Legend>
                <dxc:Legend
                    MarkerMode="CheckBox"
                    MaxWidth="510"
                    HorizontalPosition="Center"
                    VerticalPosition="TopOutside"
                    Orientation="Horizontal" />
            </dxc:ChartControl.Legend>
            <!--#endregion-->
            <dxc:XYDiagram2D>
                <dxc:XYDiagram2D.AxisX>
                    <dxc:AxisX2D
                        Logarithmic="True">
                        <!--#region WholeRange-->
                        <dxc:AxisX2D.WholeRange>
                            <dxc:Range
                                SideMarginsValue="0" />
                        </dxc:AxisX2D.WholeRange>
                        <!--#endregion-->
                        <!--#region Title-->
                        <dxc:AxisX2D.Title>
                            <dxc:AxisTitle
                                Content="Frequency" />
                        </dxc:AxisX2D.Title>
                        <!--#endregion-->
                        <!--#region Label-->
                        <dxc:AxisX2D.Label>
                            <dxc:AxisLabel
                                TextPattern="{}{A:0.####} Hz" />
                        </dxc:AxisX2D.Label>
                        <!--#endregion-->
                    </dxc:AxisX2D>
                </dxc:XYDiagram2D.AxisX>
                <dxc:XYDiagram2D.AxisY>
                    <dxc:AxisY2D
                        Logarithmic="True">
                        <!--#region WholeRange-->
                        <dxc:AxisY2D.WholeRange>
                            <dxc:Range
                                dxc:AxisY2D.AlwaysShowZeroLevel="False" />
                        </dxc:AxisY2D.WholeRange>
                        <!--#endregion-->
                        <!--#region Title-->
                        <dxc:AxisY2D.Title>
                            <dxc:AxisTitle
                                Content="Total Harmonic Distortion" />
                        </dxc:AxisY2D.Title>
                        <!--#endregion-->
                        <!--#region Label-->
                        <dxc:AxisY2D.Label>
                            <dxc:AxisLabel
                                TextPattern="{}{V:0.##}%" />
                        </dxc:AxisY2D.Label>
                        <!--#endregion-->
                    </dxc:AxisY2D>
                </dxc:XYDiagram2D.AxisY>
                <!--#region Series-->
                <dxc:XYDiagram2D.Series>
                    <dxc:LineSeries2D
                        DisplayName="Headphones 1 90 dB SPL"
                        ValueDataMember="Spl90Db"
                        FilterString="[HeadphonesName] = 'Headphones 1'"
                        Brush="{Binding Headphones190dBSPLBrush}"
                        Style="{StaticResource sereisStyle}">
                    </dxc:LineSeries2D>
                    <dxc:LineSeries2D
                        DisplayName="Headphones 1 100 dB SPL"
                        ValueDataMember="Spl100Db"
                        FilterString="[HeadphonesName] = 'Headphones 1'"
                        Brush="{Binding Headphones1100dBSPLBrush}"
                        Style="{StaticResource sereisStyle}" />
                    <dxc:LineSeries2D
                        DisplayName="Headphones 2 90 dB SPL"
                        ValueDataMember="Spl90Db"
                        FilterString="[HeadphonesName] = 'Headphones 2'"
                        Brush="{Binding Headphones290dBSPLBrush}"
                        Style="{StaticResource sereisStyle}" />
                    <dxc:LineSeries2D
                        DisplayName="Headphones 2 100 dB SPL"
                        ValueDataMember="Spl100Db"
                        FilterString="[HeadphonesName] = 'Headphones 2'"
                        Brush="{Binding Headphones2100dBSPLBrush}"
                        Style="{StaticResource sereisStyle}" />
                </dxc:XYDiagram2D.Series>
                <!--#endregion-->
            </dxc:XYDiagram2D>
        </dxc:ChartControl>

    </DockPanel>
</local:ChartsDemoModule>