                                        <ColorAnimation To="#FFFDD317" Storyboard.TargetName="ContentBorder" Storyboard.TargetProperty="Background.(SolidColorBrush.Color)" Duration="0" />
                                        <ColorAnimation To="#FFFEE052" Storyboard.TargetName="ContentBorder2" Storyboard.TargetProperty="Background.(SolidColorBrush.Color)" Duration="0" />
                                        <ColorAnimation To="#FFFDD317" Storyboard.TargetName="ContentBorder3" Storyboard.TargetProperty="Background.(SolidColorBrush.Color)" Duration="0" />
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
