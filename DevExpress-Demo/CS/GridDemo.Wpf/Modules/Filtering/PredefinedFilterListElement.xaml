<UserControl x:Class="GridDemo.Filtering.PredefinedFilterListElement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
             xmlns:dxfui="http://schemas.devexpress.com/winfx/2008/xaml/core/filteringui"
             xmlns:dxdb="http://schemas.devexpress.com/winfx/2008/xaml/demobase">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="1" Margin="8,0,0,0">
            <!--#region !-->
            <dxfui:PredefinedFiltersElement x:Name="filterElement" FieldName="UnitPrice"
                                            Context="{Binding ElementName=grid, Path=FilteringContext}"/>
            <CheckBox IsChecked="{Binding ElementName=filterElement, Path=ShowCounts}"
                      Content="Show Counts" Margin="0,8,0,0"/>
            <!--#endregion-->
        </StackPanel>
        <dxg:GridControl Name="grid" ItemsSource="{x:Static dxdb:NWindDataProvider.Invoices}">
            <dxg:GridControl.View>
                <dxg:TableView x:Name="view" ShowFixedTotalSummary="True" NavigationStyle="Row" />
            </dxg:GridControl.View>
            <dxg:GridControl.Columns>
                <dxg:GridColumn FieldName="ProductName" Width="*" />
                <!--#region !-->
                <dxg:GridColumn FieldName="UnitPrice" Width="*">
                    <dxg:GridColumn.PredefinedFilters>
                        <dxfui:PredefinedFilterCollection>
                            <dxfui:PredefinedFilter Name="Less than 10" Filter="?p &lt; 10" />
                            <dxfui:PredefinedFilter Name="From 10 to 50" Filter="?p >= 10 and ?p &lt; 50" />
                            <dxfui:PredefinedFilter Name="From 50 to 100" Filter="?p >= 50 and ?p &lt; 100" />
                            <dxfui:PredefinedFilter Name="More than 100" Filter="?p >= 100" />
                        </dxfui:PredefinedFilterCollection>
                    </dxg:GridColumn.PredefinedFilters>
                </dxg:GridColumn>
                <!--#endregion-->
                <dxg:GridColumn FieldName="Quantity" Width="*" />
                <dxg:GridColumn FieldName="OrderDate" Width="*" />
                <dxg:GridColumn FieldName="ShipCountry" Width="*" />
                <dxg:GridColumn FieldName="ShipCity" Width="*" />
            </dxg:GridControl.Columns>
            <dxg:GridControl.TotalSummary>
                <dxg:GridSummaryItem SummaryType="Count" Alignment="Right" />
            </dxg:GridControl.TotalSummary>
        </dxg:GridControl>
    </Grid>
</UserControl>