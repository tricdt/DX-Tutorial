<local:TabItemModule
    x:Class="ChartsDemo.RangeAreaTab"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ChartsDemo"
    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
    xmlns:dxc="http://schemas.devexpress.com/winfx/2008/xaml/charts"
    xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
    mc:Ignorable="d"
    d:DesignHeight="450"
    d:DesignWidth="800">
    <!--#region Resources-->
    <local:TabItemModule.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="/ChartsDemo;component/Themes/Common.xaml" />
                <ResourceDictionary
                    Source="/ChartsDemo;component/Modules/SeriesTypes/CustomMarkerModel.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <local:MarkerSizeToLabelIndentConverter
                x:Key="MarkerSizeToLabelIndentConverter" />
            <dxmvvm:BooleanNegationConverter
                x:Key="InvertedBoolConverter" />
            <ControlTemplate
                x:Key="legendTemplate">
                <Border
                    Background="{TemplateBinding Background}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    Padding="{TemplateBinding Padding}">
                    <StackPanel
                        Orientation="Horizontal">
                        <StackPanel
                            Orientation="Horizontal">
                            <Path
                                Stretch="Fill"
                                Stroke="#FF1BAE49"
                                StrokeThickness="2"
                                StrokeStartLineCap="Square"
                                StrokeEndLineCap="Square">
                                <Path.Data>
                                    <LineGeometry
                                        StartPoint="0,0"
                                        EndPoint="10,0" />
                                </Path.Data>
                            </Path>
                            <TextBlock
                                Text="Max price"
                                Margin="4,0,8,0" />
                        </StackPanel>
                        <StackPanel
                            Orientation="Horizontal">
                            <Path
                                Stretch="Fill"
                                Stroke="#FFD80079"
                                StrokeThickness="2"
                                StrokeStartLineCap="Square"
                                StrokeEndLineCap="Square">
                                <Path.Data>
                                    <LineGeometry
                                        StartPoint="0,0"
                                        EndPoint="10,0" />
                                </Path.Data>
                            </Path>
                            <TextBlock
                                Text="Min Price"
                                Margin="4,0,0,0" />
                        </StackPanel>
                    </StackPanel>
                </Border>
            </ControlTemplate>
        </ResourceDictionary>
    </local:TabItemModule.Resources>
    <!--#endregion-->

    <!--#region Options-->
    <local:TabItemModule.Options>
        <StackPanel
            Margin="12,0,12,12"
            MinWidth="210">
            <GroupBox
                Header="Labels"
                Margin="0,5,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition
                            Width="Auto" />
                        <ColumnDefinition
                            MinWidth="50"
                            Width="*" />
                    </Grid.ColumnDefinitions>
                    <dxe:CheckEdit
                        Name="cheLabelVisible"
                        Grid.ColumnSpan="2"
                        Content="Visible"
                        IsChecked="True"
                        Margin="0,0,0,10" />
                    <TextBlock
                        Text="Kind:"
                        VerticalAlignment="Center"
                        Grid.Row="1"
                        Margin="0,0,15,0" />
                    <dxe:ComboBoxEdit
                        x:Name="cbeLabelKind"
                        Grid.Row="1"
                        ItemsSource="{dxe:EnumItemsSource EnumType=dxc:RangeAreaLabelKind}"
                        EditValue="{x:Static dxc:RangeAreaLabelKind.TwoLabels}"
                        Width="116"
                        IsEnabled="{Binding RelativeSource={RelativeSource AncestorType={x:Type Grid}}, Path=Children[0].IsChecked}"
                        Grid.ColumnSpan="2"
                        Margin="35,0,0,0" />
                </Grid>
            </GroupBox>
            <GroupBox
                Header="Value 1 Marker"
                Margin="0,5,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition
                            Width="Auto" />
                        <ColumnDefinition
                            MinWidth="50"
                            Width="*" />
                    </Grid.ColumnDefinitions>
                    <dxe:CheckEdit
                        Name="cheMarker1Visible"
                        Grid.ColumnSpan="2"
                        Content="Visible" />
                    <GroupBox
                        Header="Size"
                        Margin="0,5,0,0"
                        Grid.Row="1"
                        Grid.ColumnSpan="2"
                        IsEnabled="{Binding RelativeSource={RelativeSource AncestorType={x:Type Grid}}, Path=Children[0].IsChecked}">
                        <StackPanel>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Grid.Column="0"
                                    Text="10"
                                    HorizontalAlignment="Left" />
                                <TextBlock
                                    Grid.Column="1"
                                    Text="20"
                                    HorizontalAlignment="Center" />
                                <TextBlock
                                    Grid.Column="2"
                                    Text="30"
                                    HorizontalAlignment="Right" />
                            </Grid>
                            <dxe:TrackBarEdit
                                Name="tbeMarker1Size"
                                Value="20"
                                Minimum="10"
                                Maximum="30"
                                EditValue="20"
                                TickPlacement="None" />
                        </StackPanel>
                    </GroupBox>
                    <TextBlock
                        Text="Model:"
                        VerticalAlignment="Center"
                        Grid.Row="2"
                        Margin="0,5,0,0" />
                    <dxe:ComboBoxEdit
                        Name="cbeMarker1Model"
                        Grid.Row="2"
                        Grid.Column="2"
                        Margin="0,5,0,0"
                        HorizontalAlignment="Right"
                        DisplayMember="ModelName"
                        SelectedItem="{x:Reference ringMarkerModel1}"
                        Width="75"
                        IsEnabled="{Binding RelativeSource={RelativeSource AncestorType={x:Type Grid}}, Path=Children[0].IsChecked}">
                        <dxe:ComboBoxEdit.Items>
                            <dxc:BorderlessSimpleMarker2DModel />
                            <dxc:SimpleMarker2DModel />
                            <dxc:CircleMarker2DModel />
                            <dxc:CrossMarker2DModel />
                            <dxc:DollarMarker2DModel />
                            <dxc:PolygonMarker2DModel />
                            <dxc:RingMarker2DModel
                                x:Name="ringMarkerModel1" />
                            <dxc:SquareMarker2DModel />
                            <dxc:StarMarker2DModel />
                            <dxc:TriangleMarker2DModel />
                            <dxc:InvertedTriangleMarker2DModel />
                            <dxc:DiamondMarker2DModel />
                            <dxc:PlusMarker2DModel />
                            <dxc:PentagonMarker2DModel />
                            <dxc:CustomMarker2DModel
                                PointTemplate="{StaticResource customMarkerPointTemplate}" />
                        </dxe:ComboBoxEdit.Items>
                    </dxe:ComboBoxEdit>
                </Grid>
            </GroupBox>
            <GroupBox
                Header="Value 2 Marker"
                Margin="0,5,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition
                            Width="Auto" />
                        <ColumnDefinition
                            MinWidth="50"
                            Width="*" />
                    </Grid.ColumnDefinitions>
                    <dxe:CheckEdit
                        Name="cheMarker2Visible"
                        Grid.ColumnSpan="2"
                        Content="Visible" />
                    <GroupBox
                        Header="Size"
                        Margin="0,5,0,0"
                        Grid.Row="1"
                        Grid.ColumnSpan="2"
                        IsEnabled="{Binding RelativeSource={RelativeSource AncestorType={x:Type Grid}}, Path=Children[0].IsChecked}">
                        <StackPanel>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Grid.Column="0"
                                    Text="10"
                                    HorizontalAlignment="Left" />
                                <TextBlock
                                    Grid.Column="1"
                                    Text="20"
                                    HorizontalAlignment="Center" />
                                <TextBlock
                                    Grid.Column="2"
                                    Text="30"
                                    HorizontalAlignment="Right" />
                            </Grid>
                            <dxe:TrackBarEdit
                                Name="tbeMarker2Size"
                                Value="20"
                                Minimum="10"
                                Maximum="30"
                                EditValue="20"
                                TickPlacement="None" />
                        </StackPanel>
                    </GroupBox>
                    <TextBlock
                        Text="Model:"
                        VerticalAlignment="Center"
                        Grid.Row="2"
                        Margin="0,5,0,0" />
                    <dxe:ComboBoxEdit
                        Name="cbeMarker2Model"
                        Grid.Row="2"
                        Grid.Column="2"
                        Margin="0,5,0,0"
                        HorizontalAlignment="Right"
                        DisplayMember="ModelName"
                        SelectedItem="{x:Reference ringMarkerModel2}"
                        Width="75"
                        IsEnabled="{Binding RelativeSource={RelativeSource AncestorType={x:Type Grid}}, Path=Children[0].IsChecked}">
                        <dxe:ComboBoxEdit.Items>
                            <dxc:BorderlessSimpleMarker2DModel />
                            <dxc:SimpleMarker2DModel />
                            <dxc:CircleMarker2DModel />
                            <dxc:CrossMarker2DModel />
                            <dxc:DollarMarker2DModel />
                            <dxc:PolygonMarker2DModel />
                            <dxc:RingMarker2DModel
                                x:Name="ringMarkerModel2" />
                            <dxc:SquareMarker2DModel />
                            <dxc:StarMarker2DModel />
                            <dxc:TriangleMarker2DModel />
                            <dxc:InvertedTriangleMarker2DModel />
                            <dxc:DiamondMarker2DModel />
                            <dxc:PlusMarker2DModel />
                            <dxc:PentagonMarker2DModel />
                            <dxc:CustomMarker2DModel
                                PointTemplate="{StaticResource customMarkerPointTemplate}" />
                        </dxe:ComboBoxEdit.Items>
                    </dxe:ComboBoxEdit>
                </Grid>
            </GroupBox>
        </StackPanel>
    </local:TabItemModule.Options>
    <!--#endregion-->

    <DockPanel
        Loaded="{DXEvent '@e(chart).Animate()'}">

        <!--#region ChartsRibbon-->
        <local:ChartsDemoRibbon
            DockPanel.Dock="Top"
            Chart="{x:Reference chart}" />
        <!--#endregion-->

        <dxc:ChartControl
            Name="chart"
            AnimationMode="OnLoad"
            CrosshairEnabled="{Binding ElementName=cheLabelVisible, Path=IsChecked, Converter={StaticResource InvertedBoolConverter}}">
            <!--#region ToolTipOptions-->
            <dxc:ChartControl.ToolTipOptions>
                <dxc:ToolTipOptions>
                    <dxc:ToolTipOptions.ToolTipPosition>
                        <dxc:ToolTipRelativePosition />
                    </dxc:ToolTipOptions.ToolTipPosition>
                </dxc:ToolTipOptions>
            </dxc:ChartControl.ToolTipOptions>
            <!--#endregion-->
            <dxc:ChartControl.Diagram>
                <dxc:XYDiagram2D>
                    <!--#region AxisY-->
                    <dxc:XYDiagram2D.AxisY>
                        <dxc:AxisY2D>
                            <dxc:AxisY2D.Title>
                                <dxc:AxisTitle
                                    Content="$ per barrel" />
                            </dxc:AxisY2D.Title>
                            <dxc:AxisY2D.WholeRange>
                                <dxc:Range
                                    dxc:AxisY2D.AlwaysShowZeroLevel="False" />
                            </dxc:AxisY2D.WholeRange>
                        </dxc:AxisY2D>
                    </dxc:XYDiagram2D.AxisY>
                    <!--#endregion-->
                    <dxc:XYDiagram2D.Series>
                        <dxc:RangeAreaSeries2D
                            Name="rangeArea"
                            DisplayName="Europe Brent"
                            DataSource="{DXBinding '$local:OilPrices.GetEuropeBrentPrices()'}"
                            ArgumentDataMember="Timestamp"
                            ValueDataMember="MinValue"
                            Value2DataMember="MaxValue"
                            Transparency="0.3"
                            Marker1Visible="{Binding ElementName=cheMarker1Visible, Path=IsChecked}"
                            Marker1Size="{Binding ElementName=tbeMarker1Size, Path=Value}"
                            Marker1Model="{Binding ElementName=cbeMarker1Model, Path=SelectedItem}"
                            Marker2Visible="{Binding ElementName=cheMarker2Visible, Path=IsChecked}"
                            Marker2Size="{Binding ElementName=tbeMarker2Size, Path=Value}"
                            Marker2Model="{Binding ElementName=cbeMarker2Model, Path=SelectedItem}"
                            AnimationAutoStartMode="SetStartState"
                            LabelValueSeparator="&#xA;"
                            CrosshairLabelPattern="{}{A:MMMM}&#xA;Min: ${V1:0.00}&#xA;Max: ${V2:0.00}"
                            LabelsVisibility="{Binding ElementName=cheLabelVisible, Path=IsChecked}">
                            <dxc:RangeAreaSeries2D.Border2>
                                <dxc:SeriesBorder
                                    Brush="#FFD80079" />
                            </dxc:RangeAreaSeries2D.Border2>
                            <dxc:RangeAreaSeries2D.Border1>
                                <dxc:SeriesBorder
                                    Brush="#FF1BAE49" />
                            </dxc:RangeAreaSeries2D.Border1>
                            <dxc:RangeAreaSeries2D.Label>
                                <dxc:SeriesLabel
                                    dxc:RangeAreaSeries2D.LabelKind="{Binding ElementName=cbeLabelKind, Path=EditValue}"
                                    Indent="15"
                                    ResolveOverlappingMode="Default" />
                            </dxc:RangeAreaSeries2D.Label>
                        </dxc:RangeAreaSeries2D>
                    </dxc:XYDiagram2D.Series>
                </dxc:XYDiagram2D>
            </dxc:ChartControl.Diagram>
            <!--#region Legend-->
            <dxc:ChartControl.Legend>
                <dxc:Legend
                    HorizontalPosition="Center"
                    VerticalPosition="BottomOutside"
                    Template="{StaticResource legendTemplate}" />
            </dxc:ChartControl.Legend>
            <!--#endregion-->
            <!--#region Titles-->
            <dxc:ChartControl.Titles>
                <dxc:Title
                    Dock="Top"
                    HorizontalAlignment="Center">Crude Oil Prices in 2015</dxc:Title>
                <dxc:Title
                    Dock="Bottom"
                    HorizontalAlignment="Right"
                    FontSize="12"
                    Foreground="Silver"
                    Margin="0,10,0,0">
                    From www.eia.gov
                </dxc:Title>
            </dxc:ChartControl.Titles>
            <!--#endregion-->
        </dxc:ChartControl>

    </DockPanel>
</local:TabItemModule>