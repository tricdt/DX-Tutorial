<local:ChartsDemoModule
    x:Class="ChartsDemo.PolarAndRadarDemo"
    x:Name="demoModule"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:ChartsDemo"
    mc:Ignorable="d"
    d:DesignHeight="450"
    d:DesignWidth="800"
    DataContext="{dxmvvm:ViewModelSource Type=local:TabbedModuleViewModel}">
    <!--#region Resources-->
    <local:ChartsDemoModule.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="/ChartsDemo;component/Themes/Common.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <local:OptionsConverter
                x:Key="optionsConverter" />
        </ResourceDictionary>
    </local:ChartsDemoModule.Resources>
    <!--#endregion-->

    <DockPanel>
        <!--#region Options-->
        <ScrollViewer
            Name="PART_Options"
            Style="{StaticResource optionsScrollViewerStyle}"
            Content="{Binding SelectedTab, Converter={StaticResource optionsConverter}}">
        </ScrollViewer>
        <!--#endregion-->

        <dx:DXTabControl
            SelectedTabItem="{Binding SelectedTab, Mode=TwoWay}"
            Style="{StaticResource moduleTabControlStyle}">
            <dx:DXTabControl.View>
                <dx:TabControlScrollView
                    ShowHeaderMenu="True" />
            </dx:DXTabControl.View>
            <dx:DXTabItem
                Header="Polar Point"
                Glyph="{dx:SvgImageSource Uri='../../../Images/SeriesViews/ChartTypes_PolarPoint.svg', Size='16,16'}">
                <local:PolarPointTab
                    IsModuleLoaded="{Binding ElementName=demoModule, Path=IsModuleLoaded}" />
            </dx:DXTabItem>
            <dx:DXTabItem
                Header="Polar Line"
                Glyph="{dx:SvgImageSource Uri='../../../Images/SeriesViews/ChartTypes_PolarLine.svg', Size='16,16'}">
                <local:PolarLineTab />
            </dx:DXTabItem>
            <dx:DXTabItem
                Header="Scatter Polar Line"
                Glyph="{dx:SvgImageSource Uri='../../../Images/SeriesViews/ChartTypes_ScatterPolarLine.svg', Size='16,16'}">
                <local:ScatterPolarLineTab />
            </dx:DXTabItem>
            <dx:DXTabItem
                Header="Polar Area"
                Glyph="{dx:SvgImageSource Uri='../../../Images/SeriesViews/ChartTypes_PolarArea.svg', Size='16,16'}">
                <local:PolarAreaTab />
            </dx:DXTabItem>
            <dx:DXTabItem
                Header="Polar Range Area"
                Glyph="{dx:SvgImageSource Uri='../../../Images/SeriesViews/ChartTypes_PolarRangeArea.svg', Size='16,16'}">
                <local:PolarRangeAreaTab />
            </dx:DXTabItem>
            <dx:DXTabItem
                Header="Radar Point"
                Glyph="{dx:SvgImageSource Uri='../../../Images/SeriesViews/ChartTypes_RadarPoint.svg', Size='16,16'}">
                <local:RadarPointTab />
            </dx:DXTabItem>
            <dx:DXTabItem
                Header="Radar Line"
                Glyph="{dx:SvgImageSource Uri='../../../Images/SeriesViews/ChartTypes_RadarLine.svg', Size='16,16'}">
                <local:RadarLineTab />
            </dx:DXTabItem>
            <dx:DXTabItem
                Header="Scatter Radar Line"
                Glyph="{dx:SvgImageSource Uri='../../../Images/SeriesViews/ChartTypes_ScatterRadarLine.svg', Size='16,16'}">
                <local:ScatterRadarLineTab />
            </dx:DXTabItem>
            <dx:DXTabItem
                Header="Radar Area"
                Glyph="{dx:SvgImageSource Uri='../../../Images/SeriesViews/ChartTypes_RadarArea.svg', Size='16,16'}">
                <local:RadarAreaTab />
            </dx:DXTabItem>
            <dx:DXTabItem
                Header="Radar Range Area"
                Glyph="{dx:SvgImageSource Uri='../../../Images/SeriesViews/ChartTypes_RadarRangeArea.svg', Size='16,16'}">
                <local:RadarRangeAreaTab />
            </dx:DXTabItem>
        </dx:DXTabControl>

    </DockPanel>
</local:ChartsDemoModule>