<local:TabItemModule
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ChartsDemo"
    xmlns:dxc="http://schemas.devexpress.com/winfx/2008/xaml/charts"
    mc:Ignorable="d"
    x:Class="ChartsDemo.LinearPaneLayoutTab"
    x:Name="tabItemModule"
    d:DesignHeight="450"
    d:DesignWidth="800">
    <!--#region Resources-->
    <local:TabItemModule.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="/ChartsDemo;component/Themes/Common.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </local:TabItemModule.Resources>
    <!--#endregion-->

    <DockPanel
        Loaded="{DXEvent '@e(tabItemModule).IsModuleLoaded ? @e(chart).Animate() : null'}">

        <!--#region ChartsRibbon-->
        <local:ChartsDemoRibbon
            DockPanel.Dock="Top"
            Chart="{x:Reference chart}" />
        <!--#endregion-->

        <dxc:ChartControl
            x:Name="chart"
            DataSource="{DXBinding 'new $local:WebSitePerformanceIndicator().Data'}"
            AnimationMode="OnLoad"
            Padding="10"
            CrosshairEnabled="True">
            <!--#region Titles-->
            <dxc:ChartControl.Titles>
                <dxc:Title
                    Content="Website Performance Indicators By Last Month"
                    HorizontalAlignment="Left" />
            </dxc:ChartControl.Titles>
            <!--#endregion-->
            <!--#region Crosshair Options-->
            <dxc:ChartControl.CrosshairOptions>
                <dxc:CrosshairOptions
                    GroupHeaderPattern="{}{A:M/d/yy}"
                    LinesMode="Free"
                    ShowOnlyInFocusedPane="False" />
            </dxc:ChartControl.CrosshairOptions>
            <!--#endregion-->
            <dxc:XYDiagram2D
                PaneOrientation="Vertical"
                EnableAxisXNavigation="True">
                <dxc:XYDiagram2D.DefaultPane>
                    <dxc:Pane
                        x:Name="visitorsPane"
                        Padding="10,0,10,10">
                        <dxc:Pane.AxisXScrollBarOptions>
                            <dxc:ScrollBarOptions
                                Visible="False" />
                        </dxc:Pane.AxisXScrollBarOptions>
                        <dxc:Pane.Title>
                            <dxc:PaneTitle
                                Visible="True"
                                Content="Visitors" />
                        </dxc:Pane.Title>
                    </dxc:Pane>
                </dxc:XYDiagram2D.DefaultPane>
                <dxc:XYDiagram2D.Panes>
                    <dxc:Pane
                        x:Name="trafficAndResponsePane"
                        Padding="10,0,10,10">
                        <dxc:Pane.AxisXScrollBarOptions>
                            <dxc:ScrollBarOptions
                                Visible="False" />
                        </dxc:Pane.AxisXScrollBarOptions>
                        <dxc:Pane.Title>
                            <dxc:PaneTitle
                                Visible="True"
                                Content="User Traffic / Average Response Time" />
                        </dxc:Pane.Title>
                    </dxc:Pane>
                    <dxc:Pane
                        x:Name="pageLoadTimePane"
                        Padding="10,0,10,0">
                        <dxc:Pane.Title>
                            <dxc:PaneTitle
                                Visible="True"
                                Content="Average Page Load Time" />
                        </dxc:Pane.Title>
                    </dxc:Pane>
                </dxc:XYDiagram2D.Panes>
                <!--#region Axes-->
                <dxc:XYDiagram2D.AxisX>
                    <dxc:AxisX2D
                        GridLinesVisible="True"
                        Visible="True">
                        <dxc:AxisX2D.WholeRange>
                            <dxc:Range
                                AutoSideMargins="False"
                                SideMarginsValue="0.5" />
                        </dxc:AxisX2D.WholeRange>
                        <dxc:AxisX2D.VisibilityInPanes>
                            <dxc:VisibilityInPane
                                Pane="{Binding ElementName=visitorsPane}"
                                Visible="False" />
                            <dxc:VisibilityInPane
                                Pane="{Binding ElementName=trafficAndResponsePane}"
                                Visible="False" />
                        </dxc:AxisX2D.VisibilityInPanes>
                        <dxc:AxisX2D.DateTimeScaleOptions>
                            <dxc:ManualDateTimeScaleOptions />
                        </dxc:AxisX2D.DateTimeScaleOptions>
                    </dxc:AxisX2D>
                </dxc:XYDiagram2D.AxisX>
                <dxc:XYDiagram2D.AxisY>
                    <dxc:AxisY2D
                        Visible="False" />
                </dxc:XYDiagram2D.AxisY>
                <dxc:XYDiagram2D.SecondaryAxesY>
                    <dxc:SecondaryAxisY2D
                        x:Name="uniqueUsersAxisY"
                        Visible="False"
                        GridLinesVisible="True"
                        Interlaced="True" />
                    <dxc:SecondaryAxisY2D
                        x:Name="averageResponseTimeAxisY"
                        Visible="False" />
                    <dxc:SecondaryAxisY2D
                        x:Name="pageLoadTimeAxisY"
                        Visible="False"
                        GridLinesVisible="True"
                        Interlaced="True" />
                </dxc:XYDiagram2D.SecondaryAxesY>
                <!--#endregion-->
                <!--#region Series-->
                <dxc:BarStackedSeries2D
                    DisplayName="New Visitors"
                    ArgumentScaleType="DateTime"
                    ArgumentDataMember="ReportDate"
                    ValueDataMember="NewVisitors"
                    AnimationAutoStartMode="SetStartState">
                    <dxc:BarStackedSeries2D.PointAnimation>
                        <dxc:Bar2DFadeInAnimation
                            PointDelay="0:0:0.05" />
                    </dxc:BarStackedSeries2D.PointAnimation>
                </dxc:BarStackedSeries2D>
                <dxc:BarStackedSeries2D
                    DisplayName="Return Visitors"
                    ArgumentScaleType="DateTime"
                    ArgumentDataMember="ReportDate"
                    AnimationAutoStartMode="SetStartState">
                    <dxc:BarStackedSeries2D.PointAnimation>
                        <dxc:Bar2DFadeInAnimation
                            PointDelay="0:0:0.05" />
                    </dxc:BarStackedSeries2D.PointAnimation>
                </dxc:BarStackedSeries2D>
                <dxc:LineSeries2D
                    Pane="{Binding ElementName=trafficAndResponsePane}"
                    AxisY="{Binding ElementName=uniqueUsersAxisY}"
                    DisplayName="Unique Users"
                    ArgumentScaleType="DateTime"
                    ArgumentDataMember="ReportDate"
                    ValueDataMember="TrafficTime"
                    CrosshairLabelPattern="{}{S} : {V} per sec"
                    AnimationAutoStartMode="SetStartState">
                    <dxc:LineSeries2D.SeriesAnimation>
                        <dxc:Line2DUnwindAnimation
                            Duration="0:0:01.5" />
                    </dxc:LineSeries2D.SeriesAnimation>
                </dxc:LineSeries2D>
                <dxc:LineSeries2D
                    Pane="{Binding ElementName=trafficAndResponsePane}"
                    AxisY="{Binding ElementName=averageResponseTimeAxisY}"
                    DisplayName="Average Response Time"
                    ArgumentScaleType="DateTime"
                    ArgumentDataMember="ReportDate"
                    ValueDataMember="ResponseTime"
                    CrosshairLabelPattern="{}{S} : {V} ms"
                    AnimationAutoStartMode="SetStartState">
                    <dxc:LineSeries2D.SeriesAnimation>
                        <dxc:Line2DUnwindAnimation
                            Duration="0:0:01.5" />
                    </dxc:LineSeries2D.SeriesAnimation>
                </dxc:LineSeries2D>
                <dxc:BarSideBySideSeries2D
                    Pane="{Binding ElementName=pageLoadTimePane}"
                    AxisY="{Binding ElementName=pageLoadTimeAxisY}"
                    DisplayName="Average Page Load Time"
                    ArgumentScaleType="DateTime"
                    ArgumentDataMember="ReportDate"
                    ValueDataMember="AveragePageLoadTime"
                    CrosshairLabelPattern="{}{S} : {V:0.##} sec"
                    AnimationAutoStartMode="SetStartState">
                    <dxc:BarSideBySideSeries2D.PointAnimation>
                        <dxc:Bar2DFadeInAnimation
                            PointDelay="0:0:0.05" />
                    </dxc:BarSideBySideSeries2D.PointAnimation>
                </dxc:BarSideBySideSeries2D>
                <!--#endregion-->
            </dxc:XYDiagram2D>
        </dxc:ChartControl>

    </DockPanel>
</local:TabItemModule>