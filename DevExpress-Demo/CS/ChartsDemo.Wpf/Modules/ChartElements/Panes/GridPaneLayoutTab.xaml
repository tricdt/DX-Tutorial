<local:TabItemModule
    x:Class="ChartsDemo.GridPaneLayoutTab"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ChartsDemo"
    xmlns:dxc="http://schemas.devexpress.com/winfx/2008/xaml/charts"
    mc:Ignorable="d"
    d:DesignHeight="450"
    d:DesignWidth="800">
    <!--#region Resources-->
    <local:TabItemModule.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="/ChartsDemo;component/Themes/Common.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </local:TabItemModule.Resources>
    <!--#endregion-->

    <DockPanel
        Loaded="{DXEvent '@e(chart).Animate()'}">

        <!--#region ChartsRibbon-->
        <local:ChartsDemoRibbon
            DockPanel.Dock="Top"
            Chart="{x:Reference chart}" />
        <!--#endregion-->

        <dxc:ChartControl
            Name="chart"
            DataSource="{DXBinding 'new $local:WebSitePerformanceIndicator().Data'}"
            AnimationMode="OnLoad"
            Padding="10"
            CrosshairEnabled="True">
            <!--#region  Crosshair Options-->
            <dxc:ChartControl.CrosshairOptions>
                <dxc:CrosshairOptions
                    GroupHeaderPattern="{}{A:M/d/yy}"
                    ShowOnlyInFocusedPane="False" />
            </dxc:ChartControl.CrosshairOptions>
            <!--#endregion-->
            <dxc:XYDiagram2D
                PaneOrientation="Vertical"
                EnableAxisXNavigation="True"
                RuntimePaneCollapse="False">
                <dxc:XYDiagram2D.PaneLayout>
                    <dxc:GridLayout>
                        <dxc:GridLayout.ColumnDefinitions>
                            <dxc:LayoutDefinition
                                Size="5*" />
                            <dxc:LayoutDefinition
                                Size="3*" />
                        </dxc:GridLayout.ColumnDefinitions>
                    </dxc:GridLayout>
                </dxc:XYDiagram2D.PaneLayout>
                <dxc:XYDiagram2D.DefaultPane>
                    <dxc:Pane
                        x:Name="TrafficAndResponseTimePane"
                        dxc:GridLayout.RowSpan="2"
                        Padding="10,0,10,10">
                        <dxc:Pane.AxisXScrollBarOptions>
                            <dxc:ScrollBarOptions
                                Visible="False" />
                        </dxc:Pane.AxisXScrollBarOptions>
                        <dxc:Pane.Title>
                            <dxc:PaneTitle
                                Visibility="Visible"
                                Content="User Traffic / Average Response Time" />
                        </dxc:Pane.Title>
                    </dxc:Pane>
                </dxc:XYDiagram2D.DefaultPane>
                <dxc:XYDiagram2D.Panes>
                    <dxc:Pane
                        x:Name="VisitorsPane"
                        Padding="10,0,10,0">
                        <dxc:Pane.Title>
                            <dxc:PaneTitle
                                Visibility="Visible"
                                Content="Visitors" />
                        </dxc:Pane.Title>
                    </dxc:Pane>
                    <dxc:Pane
                        x:Name="PageLoadTimePane"
                        Padding="10,0,10,10">
                        <dxc:Pane.AxisXScrollBarOptions>
                            <dxc:ScrollBarOptions
                                Visible="False" />
                        </dxc:Pane.AxisXScrollBarOptions>
                        <dxc:Pane.Title>
                            <dxc:PaneTitle
                                Visibility="Visible"
                                Content="Average Page Load Time" />
                        </dxc:Pane.Title>
                    </dxc:Pane>
                    <dxc:Pane
                        x:Name="HTTPErrorsPane"
                        Padding="10,0,10,10">
                        <dxc:Pane.AxisXScrollBarOptions>
                            <dxc:ScrollBarOptions
                                Visible="False" />
                        </dxc:Pane.AxisXScrollBarOptions>
                        <dxc:Pane.Title>
                            <dxc:PaneTitle
                                Visibility="Visible"
                                Content="HTTP Error Status Codes" />
                        </dxc:Pane.Title>
                    </dxc:Pane>
                    <dxc:Pane
                        x:Name="MemoryAndCPUPane"
                        Padding="10,0,10,0">
                        <dxc:Pane.Title>
                            <dxc:PaneTitle
                                Visibility="Visible"
                                Content="Memory / CPU usage" />
                        </dxc:Pane.Title>
                    </dxc:Pane>
                </dxc:XYDiagram2D.Panes>
                <!--#region Axes-->
                <dxc:XYDiagram2D.AxisX>
                    <dxc:AxisX2D
                        GridLinesVisible="True"
                        Visible="True">
                        <dxc:AxisX2D.VisibilityInPanes>
                            <dxc:VisibilityInPane
                                Pane="{Binding ElementName=TrafficAndResponseTimePane}"
                                Visible="False" />
                            <dxc:VisibilityInPane
                                Pane="{Binding ElementName=HTTPErrorsPane}"
                                Visible="False" />
                            <dxc:VisibilityInPane
                                Pane="{Binding ElementName=PageLoadTimePane}"
                                Visible="False" />
                        </dxc:AxisX2D.VisibilityInPanes>
                        <dxc:AxisX2D.DateTimeScaleOptions>
                            <dxc:ManualDateTimeScaleOptions
                                GridAlignment="Day">
                            </dxc:ManualDateTimeScaleOptions>
                        </dxc:AxisX2D.DateTimeScaleOptions>
                    </dxc:AxisX2D>
                </dxc:XYDiagram2D.AxisX>
                <dxc:XYDiagram2D.AxisY>
                    <dxc:AxisY2D
                        Interlaced="True"
                        Visible="False" />
                </dxc:XYDiagram2D.AxisY>
                <dxc:XYDiagram2D.SecondaryAxesY>
                    <dxc:SecondaryAxisY2D
                        x:Name="AverageResponseTime"
                        Visible="False" />
                    <dxc:SecondaryAxisY2D
                        x:Name="Memory"
                        Visible="False"
                        GridLinesVisible="True"
                        Interlaced="True" />
                    <dxc:SecondaryAxisY2D
                        x:Name="CPU"
                        Visible="False" />
                    <dxc:SecondaryAxisY2D
                        x:Name="AveragePageLoadTime"
                        Visible="False"
                        GridLinesVisible="True"
                        Interlaced="True" />
                    <dxc:SecondaryAxisY2D
                        x:Name="HTTPErrorStatusCodes"
                        Visible="False"
                        GridLinesVisible="True"
                        Interlaced="True" />
                    <dxc:SecondaryAxisY2D
                        x:Name="Visitors"
                        Visible="False"
                        GridLinesVisible="True"
                        Interlaced="True" />
                </dxc:XYDiagram2D.SecondaryAxesY>
                <!--#endregion-->
                <!--#region Series-->
                <dxc:LineSeries2D
                    DisplayName="Unique Users"
                    ArgumentDataMember="ReportDate"
                    ValueDataMember="TrafficTime"
                    CrosshairLabelPattern="{}{S} : {V} per sec">
                    <dxc:LineSeries2D.SeriesAnimation>
                        <dxc:Line2DUnwindAnimation
                            Duration="0:0:01.5" />
                    </dxc:LineSeries2D.SeriesAnimation>
                </dxc:LineSeries2D>
                <dxc:LineSeries2D
                    DisplayName="Average Response Time"
                    ArgumentDataMember="ReportDate"
                    ValueDataMember="ResponseTime"
                    CrosshairLabelPattern="{}{S} : {V} ms"
                    AxisY="{Binding ElementName=AverageResponseTime}">
                    <dxc:LineSeries2D.SeriesAnimation>
                        <dxc:Line2DUnwindAnimation
                            Duration="0:0:01.5" />
                    </dxc:LineSeries2D.SeriesAnimation>
                </dxc:LineSeries2D>
                <dxc:BarStackedSeries2D
                    DisplayName="New Visitors"
                    ArgumentDataMember="ReportDate"
                    ValueDataMember="NewVisitors"
                    AxisY="{Binding ElementName=Visitors}"
                    Pane="{Binding ElementName=VisitorsPane}">
                    <dxc:BarStackedSeries2D.PointAnimation>
                        <dxc:Bar2DFadeInAnimation
                            PointDelay="0:0:0.05" />
                    </dxc:BarStackedSeries2D.PointAnimation>
                </dxc:BarStackedSeries2D>
                <dxc:BarStackedSeries2D
                    DisplayName="Return Visitors"
                    ArgumentDataMember="ReportDate"
                    ValueDataMember="ReturnVisitors"
                    AxisY="{Binding ElementName=Visitors}"
                    Pane="{Binding ElementName=VisitorsPane}">
                    <dxc:BarStackedSeries2D.PointAnimation>
                        <dxc:Bar2DFadeInAnimation
                            PointDelay="0:0:0.05" />
                    </dxc:BarStackedSeries2D.PointAnimation>
                </dxc:BarStackedSeries2D>
                <dxc:BarSideBySideSeries2D
                    DisplayName="Average Page Load Time"
                    ArgumentDataMember="ReportDate"
                    ValueDataMember="AveragePageLoadTime"
                    CrosshairLabelPattern="{}{S} : {V:0.##} sec"
                    AxisY="{Binding ElementName=AveragePageLoadTime}"
                    Pane="{Binding ElementName=PageLoadTimePane}">
                    <dxc:BarSideBySideSeries2D.PointAnimation>
                        <dxc:Bar2DFadeInAnimation
                            PointDelay="0:0:0.05" />
                    </dxc:BarSideBySideSeries2D.PointAnimation>
                </dxc:BarSideBySideSeries2D>
                <dxc:LineSeries2D
                    DisplayName="Client Errors"
                    ArgumentDataMember="ReportDate"
                    ValueDataMember="ClientErrors"
                    AxisY="{Binding ElementName=HTTPErrorStatusCodes}"
                    Pane="{Binding ElementName=HTTPErrorsPane}">
                    <dxc:LineSeries2D.SeriesAnimation>
                        <dxc:Line2DUnwindAnimation
                            Duration="0:0:01.5" />
                    </dxc:LineSeries2D.SeriesAnimation>
                </dxc:LineSeries2D>
                <dxc:LineSeries2D
                    DisplayName="Server Errors"
                    ArgumentDataMember="ReportDate"
                    ValueDataMember="ServerErrors"
                    AxisY="{Binding ElementName=HTTPErrorStatusCodes}"
                    Pane="{Binding ElementName=HTTPErrorsPane}">
                    <dxc:LineSeries2D.SeriesAnimation>
                        <dxc:Line2DUnwindAnimation
                            Duration="0:0:01.5" />
                    </dxc:LineSeries2D.SeriesAnimation>
                </dxc:LineSeries2D>
                <dxc:AreaSeries2D
                    DisplayName="Memory"
                    ArgumentDataMember="ReportDate"
                    ValueDataMember="MemoryUsage"
                    CrosshairLabelPattern="{}{S} : {V} MB"
                    AxisY="{Binding ElementName=Memory}"
                    Pane="{Binding ElementName=MemoryAndCPUPane}">
                    <dxc:AreaSeries2D.SeriesAnimation>
                        <dxc:Area2DUnwindAnimation
                            Duration="0:0:01.5" />
                    </dxc:AreaSeries2D.SeriesAnimation>
                </dxc:AreaSeries2D>
                <dxc:LineSeries2D
                    DisplayName="Server Errors"
                    ArgumentDataMember="ReportDate"
                    ValueDataMember="CPUUsage"
                    CrosshairLabelPattern="{}{S} : {V}%"
                    AxisY="{Binding ElementName=CPU}"
                    Pane="{Binding ElementName=MemoryAndCPUPane}">
                    <dxc:LineSeries2D.SeriesAnimation>
                        <dxc:Line2DUnwindAnimation
                            Duration="0:0:01.5" />
                    </dxc:LineSeries2D.SeriesAnimation>
                </dxc:LineSeries2D>
                <!--#endregion-->
            </dxc:XYDiagram2D>
            <!--#region Titles-->
            <dxc:ChartControl.Titles>
                <dxc:Title
                    Content="Website Performance Indicators By Last Month"
                    HorizontalAlignment="Left" />
            </dxc:ChartControl.Titles>
            <!--#endregion-->
        </dxc:ChartControl>

    </DockPanel>
</local:TabItemModule>