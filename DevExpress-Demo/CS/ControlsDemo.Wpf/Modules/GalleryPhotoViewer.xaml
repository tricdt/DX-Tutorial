                                 VerticalScrollbarVisibility="Auto"
                                 ItemAutoWidth="True"
                                 ItemBorderTemplate="{StaticResource MenuGalleryItemBorderTemplate}"
                                 ItemContentHorizontalAlignment="Left"
                                 ItemCaptionMargin="32,6,0,6"
                                 ItemClick="GalleryMenu_ItemClick">
