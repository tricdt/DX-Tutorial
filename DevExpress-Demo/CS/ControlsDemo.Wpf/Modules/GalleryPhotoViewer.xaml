                            <ColumnDefinition Width="20" />
                        </Grid.ColumnDefinitions>
                        <TextBlock x:Name="imageViewerTitle"
                                   Foreground="#FFBEC3E6"
                                   TextWrapping="Wrap"
                                   Margin="0,3"
                                   FontSize="12"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
