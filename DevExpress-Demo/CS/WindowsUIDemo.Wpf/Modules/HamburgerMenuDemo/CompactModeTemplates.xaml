<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
    xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
    xmlns:dxi="http://schemas.devexpress.com/winfx/2008/xaml/core/internal"
    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
    xmlns:dxei="http://schemas.devexpress.com/winfx/2008/xaml/editors/internal"
    xmlns:dxgt="http://schemas.devexpress.com/winfx/2008/xaml/grid/themekeys"
    xmlns:local="clr-namespace:WindowsUIDemo">

    <Style x:Key="HighlightTextBox" TargetType="TextBlock">
        <Setter Property="dxei:TextBlockService.EnableTextHighlighting" Value="True" />
        <Setter Property="dxei:TextBlockService.HighlightedTextCriteria" Value="Contains" />
        <Setter Property="dxei:TextBlockService.HighlightedText" Value="{Binding Path=View.SearchString}" />
        <Setter Property="dxei:TextBlockService.HighlightedTextAppearance">
            <Setter.Value>
                <dxe:HighlighterAppearance />
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="DetailTextBox" TargetType="TextBlock" BasedOn="{StaticResource HighlightTextBox}">
        <Setter Property="Margin" Value="83,0,0,6"/>
        <Style.Triggers>
            <Trigger Property="dx:ThemeManager.IsTouchEnabled" Value="True">
                <Setter Property="Margin" Value="93,0,0,6"/>
            </Trigger>
            <Trigger Property="dx:ThemeManager.IsTouchlineTheme" Value="True">
                <Setter Property="Margin" Value="93,0,0,6"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <DataTemplate x:Key="CompactRowTemplate">
        <DataTemplate.Resources>
            <Style x:Key="ImageGlyphStyle" TargetType="Image">
                <Setter Property="Margin" Value="2,0,2,0" />
                <Setter Property="Opacity" Value="0.7" />
                <Setter Property="Width" Value="16"/>
                <Setter Property="Height" Value="16"/>
                <Style.Triggers>
                    <DataTrigger Value="True" Binding="{Binding IsMouseOver, RelativeSource={RelativeSource Self}}">
                        <Setter Property="Opacity" Value="1" />
                    </DataTrigger>
                </Style.Triggers>
            </Style>

            <Style TargetType="FrameworkElement" x:Key="VisibleAnimation">
                <Setter Property="Visibility" Value="Collapsed"/>
                <Setter Property="Opacity" Value="0"/>
                <Style.Triggers>
                    <Trigger Property="Visibility" Value="Visible">
                        <Trigger.EnterActions>
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                     From="0.0" To="1.0" Duration="0:0:0.2"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </Trigger.EnterActions>
                    </Trigger>
                </Style.Triggers>
            </Style>

            <Style x:Key="SubjectTextBoxStyle" TargetType="TextBlock" BasedOn="{StaticResource HighlightTextBox}">
                <Style.Triggers>
                    <DataTrigger Binding="{Binding Row.IsUnread}" Value="True">
                        <Setter Property="FontWeight" Value="Bold" />
                    </DataTrigger>
                </Style.Triggers>
            </Style>

            <dxmvvm:ObjectToObjectConverter x:Key="priorityToVisibleConverter" DefaultTarget="Collapsed">
                <dxmvvm:MapItem Source="2" Target="Visible" />
            </dxmvvm:ObjectToObjectConverter>
        </DataTemplate.Resources>
        <ContentControl>
            <Grid Margin="0,1,20,1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="20" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="90" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Border
                    Grid.RowSpan="3" Width="4" VerticalAlignment="Stretch" HorizontalAlignment="Left"
                    Visibility="{Binding Row.IsUnread, Converter={dx:BooleanToVisibilityConverter}}"
                    Background="{dxi:ThemeResource {dxgt:CardTemplatesThemeKey ResourceKey=CellFocusedBrush}}" />

                <TextBlock Grid.Column="1" Margin="0,12,0,0" Text="{Binding Row.Employee.FullName}" TextTrimming="CharacterEllipsis" FontSize="18" Style="{StaticResource HighlightTextBox}"
                           Foreground="{dxi:ThemeResource {dxgt:GridControlThemeKey ResourceKey=Foreground}}" FontWeight="Normal"
                           />
                <TextBlock
                    x:Name="tbSubject"
                    Grid.Column="1" Grid.Row="1" Margin="0,0,0,0" VerticalAlignment="Center" Style="{StaticResource SubjectTextBoxStyle}"
                    FontSize="12" Text="{Binding Row.Subject}" TextTrimming="CharacterEllipsis" />
                <TextBlock Style="{StaticResource HighlightTextBox}"
                    Grid.Column="1" Grid.Row="2" Margin="0,0,0,12" VerticalAlignment="Center" FontWeight="Normal"
                    FontSize="12" Text="{Binding Row.PlainText}" TextTrimming="CharacterEllipsis" Opacity="0.62" >
                </TextBlock>
                <StackPanel
                    x:Name="GlyphPanel" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2"
                    Margin="0,7,0,0" HorizontalAlignment="Right" Orientation="Horizontal">
                    <StackPanel Orientation="Horizontal" Style="{StaticResource VisibleAnimation}">
                        <StackPanel.Visibility>
                            <Binding Path="IsMouseOver" RelativeSource="{RelativeSource AncestorType=dxg:RowControl}">
                                <Binding.Converter>
                                    <dx:BoolToVisibilityConverter />
                                </Binding.Converter>
                            </Binding>
                        </StackPanel.Visibility>
                        <dx:DXImage Source="/WindowsUIDemo;component/Images/Hamburger/Mail/Unread.svg" Style="{StaticResource ImageGlyphStyle}" >
                            <ToolTipService.ToolTip>
                                <Binding Path="Row.IsUnread">
                                    <Binding.Converter>
                                        <dx:BoolToObjectConverter TrueValue="Mark as Read" FalseValue="Mark as Unread" />
                                    </Binding.Converter>
                                </Binding>
                            </ToolTipService.ToolTip>
                        </dx:DXImage>
                        <dx:DXImage Source="/WindowsUIDemo;component/Images/Hamburger/Mail/Edit.svg" Style="{StaticResource ImageGlyphStyle}" >
                            <ToolTipService.ToolTip>
                                <TextBlock Text="Edit" />
                            </ToolTipService.ToolTip>
                        </dx:DXImage>
                        <dx:DXImage Source="/WindowsUIDemo;component/Images/Hamburger/Mail/Delete.svg" Style="{StaticResource ImageGlyphStyle}" >
                            <ToolTipService.ToolTip>
                                <TextBlock Text="Delete" />
                            </ToolTipService.ToolTip>
                        </dx:DXImage>
                    </StackPanel>
                    <dx:DXImage Source="/WindowsUIDemo;component/Images/Hamburger/Mail/Attachment.svg" Stretch="None" Visibility="{Binding Row.Attachment, Converter={dx:BooleanToVisibilityConverter}}" >
                        <ToolTipService.ToolTip>
                            <TextBlock Text="Has Attachment" />
                        </ToolTipService.ToolTip>
                    </dx:DXImage>
                    <dx:DXImage Source="/WindowsUIDemo;component/Images/Hamburger/Mail/High.svg" Visibility="{Binding Row.Priority, Converter={StaticResource priorityToVisibleConverter}}" Width="16" Height="16">
                        <ToolTipService.ToolTip>
                            <Binding Path="Row.Priority">
                                <Binding.Converter>
                                    <dxmvvm:ObjectToObjectConverter>
                                        <dxmvvm:MapItem Source="2" Target="High Priority" />
                                    </dxmvvm:ObjectToObjectConverter>
                                </Binding.Converter>
                            </Binding>
                        </ToolTipService.ToolTip>
                    </dx:DXImage>
                </StackPanel>
                <TextBlock
                    Margin="0,7,0,0" VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Column="2" Grid.Row="1"
                    FontSize="12" Text="{Binding Row.Received, StringFormat=d}" Style="{StaticResource SubjectTextBoxStyle}"/>
            </Grid>
        </ContentControl>
    </DataTemplate>

    <ControlTemplate x:Key="{dxgt:GridRowThemeKey ResourceKey=RowDetailsTemplate, IsThemeIndependent=True}" TargetType="dxg:RowDetailsControl">
        <dx:DataContentPresenter x:Name="Content" />
    </ControlTemplate>

    <DataTemplate x:Key="DetailRowTemplate">
        <TextBlock
            Style="{StaticResource DetailTextBox}" VerticalAlignment="Center"
                    FontSize="12" Text="{Binding Row.PlainText}" FontWeight="Normal" TextTrimming="CharacterEllipsis" Opacity="0.62" >
        </TextBlock>
    </DataTemplate>

    <Style x:Key="RowStyle" TargetType="dxg:RowControl">
        <Style.Triggers>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="IsMouseOver" Value="True" />
                    <Condition Property="dxg:TableView.IsFocusedRow" Value="False" />
                </MultiTrigger.Conditions>
                <Setter Property="Background" Value="{dxi:ThemeResource {dxgt:GridRowThemeKey ResourceKey=BorderSelectedBrush}}" />
            </MultiTrigger>
            <DataTrigger Binding="{Binding IsFocused}" Value="True">
                <Setter Property="Background" Value="{dxi:ThemeResource {dxgt:GridRowThemeKey ResourceKey=BorderFocusedBrush}}" />
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <DataTemplate x:Key="AttachmentCellTemplate">
        <dx:DXImage
            Margin="4,0,4,0" HorizontalAlignment="Left" VerticalAlignment="Center" Source="/WindowsUIDemo;component/Images/Hamburger/Mail/Attachment.svg"
            Visibility="{Binding Value, Converter={dx:BooleanToVisibilityConverter}}" Width="16" Height="16">
            <ToolTipService.ToolTip>
                <TextBlock Text="Has Attachment" />
            </ToolTipService.ToolTip>
        </dx:DXImage>
    </DataTemplate>

    <DataTemplate x:Key="PriorityCellTemplate">
        <dx:DXImage Margin="4,0,4,0" HorizontalAlignment="Left" VerticalAlignment="Center" Width="16" Height="16">
            <Image.Source>
                <Binding Path="Value">
                    <Binding.Converter>
                        <dxmvvm:ObjectToObjectConverter>
                            <dxmvvm:MapItem Source="2" Target="/WindowsUIDemo;component/Images/Hamburger/Mail/High.svg" />
                        </dxmvvm:ObjectToObjectConverter>
                    </Binding.Converter>
                </Binding>
            </Image.Source>
            <ToolTipService.ToolTip>
                <Binding Path="Value">
                    <Binding.Converter>
                        <dxmvvm:ObjectToObjectConverter>
                            <dxmvvm:MapItem Source="2" Target="High Priority" />
                        </dxmvvm:ObjectToObjectConverter>
                    </Binding.Converter>
                </Binding>
            </ToolTipService.ToolTip>
        </dx:DXImage>
    </DataTemplate>

    <DataTemplate x:Key="PriorityGroupValueTemplate">
        <TextBlock >
            <TextBlock.Text>
                <Binding Path="RowData.Row.Priority">
                    <Binding.Converter>
                        <local:PriorityGroupValueConverter />
                    </Binding.Converter>
                </Binding>
            </TextBlock.Text>
        </TextBlock>
    </DataTemplate>

    <DataTemplate x:Key="AttachmentGroupValueTemplate">
        <TextBlock >
            <TextBlock.Text>
                <Binding Path="RowData.Row.Attachment">
                    <Binding.Converter>
                        <local:AttachmentGroupValueConverter />
                    </Binding.Converter>
                </Binding>
            </TextBlock.Text>
        </TextBlock>
    </DataTemplate>

    <Style x:Key="{dxgt:TableViewThemeKey ResourceKey=CompactPanelOrderStyle, IsThemeIndependent=true}" TargetType="TextBlock">
        <Setter Property="Text">
            <Setter.Value>
                <MultiBinding>
                    <Binding Path="FieldName" />
                    <Binding Path="SortOrder" />
                    <MultiBinding.Converter>
                        <local:OrderNameConverter />
                    </MultiBinding.Converter>
                </MultiBinding>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>