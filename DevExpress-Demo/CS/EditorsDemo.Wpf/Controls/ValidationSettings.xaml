<UserControl x:Class="EditorsDemo.ValidationSettings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
             xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <StackPanel>
        <StackPanel>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Label Content="Edit value:" VerticalAlignment="Center"/>
                <dxe:TextEdit Grid.Column="1"
                          EditValue="{Binding EditValue}"
                          IsReadOnly="True"/>
            </Grid>
            <Grid Margin="0,6,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Label Content="Invalid value behavior:" VerticalAlignment="Center"/>
                <dxe:ComboBoxEdit Grid.Column="1"
                              EditValue="{Binding Path=InvalidValueBehavior, Mode=TwoWay}"
                              IsTextEditable="False">
                    <dxe:ComboBoxEdit.Items>
                        <sys:String>AllowLeaveEditor</sys:String>
                        <sys:String>WaitForValidValue</sys:String>
                    </dxe:ComboBoxEdit.Items>
                </dxe:ComboBoxEdit>
            </Grid>
        </StackPanel>
        <GroupBox Header="Validate Current Editor" Margin="0,12,0,0">
            <StackPanel>
                <dxe:CheckEdit Content="Causes validation"
                               EditValue="{Binding CausesValidation, Mode=TwoWay}"
                               x:Name="chCausedValidation"/>
                <dxe:CheckEdit Margin ="5,4,0,0"
                               Content="On text input"
                               EditValue="{Binding ValidateOnTextInput, Mode=TwoWay}"
                               Visibility="{Binding IsChecked, ElementName=chCausedValidation, Converter={dxmvvm:BooleanToVisibilityConverter}}"/>
                <dxe:CheckEdit Margin ="5,0,0,0"
                               Content="On press enter"
                               EditValue="{Binding ValidateOnEnterKeyPressed, Mode=TwoWay}"
                               Visibility="{Binding IsChecked, ElementName=chCausedValidation, Converter={dxmvvm:BooleanToVisibilityConverter}}"/>
            </StackPanel>
        </GroupBox>
    </StackPanel>
</UserControl>