<UserControl x:Class="GanttDemo.Examples.BuiltinTypes"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:GanttDemo.Examples"
             xmlns:dxgn="http://schemas.devexpress.com/winfx/2008/xaml/gantt">
    <UserControl.DataContext>
        <local:ProjectTaskViewModel/>
    </UserControl.DataContext>
    <dxgn:GanttControl ItemsSource="{Binding Tasks}">
        <dxgn:GanttColumn BindTo="Name" Width="150"/>
        <dxgn:GanttColumn BindTo="StartDate"/>
        <dxgn:GanttColumn BindTo="FinishDate"/>
        <dxgn:GanttControl.View>
            <dxgn:GanttView AutoExpandAllNodes="True" TreeListWidth="Auto" Zoom="1:0:0"/>
        </dxgn:GanttControl.View>
    </dxgn:GanttControl>
</UserControl>