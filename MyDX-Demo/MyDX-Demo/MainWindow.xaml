<dx:ThemedWindow 
    x:Class="MyDX_Demo.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:Views="clr-namespace:MyDX_Demo.Views"
    xmlns:control="clr-namespace:MyDX_Demo.Controls"
    Title="MainWindow" Height="800" Width="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <control:AnalogClock Grid.Row="0" ShowSeconds="True"/>
        <control:DigitalClock Grid.Row="1" ShowSeconds="True" Margin="0 10 0 0" FontSize="36" HorizontalAlignment="Center" ColonBlink="True"/>
    </Grid>
</dx:ThemedWindow>
